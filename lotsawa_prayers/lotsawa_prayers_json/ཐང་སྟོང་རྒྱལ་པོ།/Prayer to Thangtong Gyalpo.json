  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅། །ཐང་སྟོང་རྒྱལ་པོར་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ན་མོ་གུ་རུ།"
    },
    {
      "bo": "བདུད་དཔུང་འཇོམས་མཛད་སྨུག་ནག་ཁྲོ་བོའི་སྐུ། །"
    },
    {
      "bo": "ལྟ་བའི་གདེང་ལྡན་བརྟུལ་ཞུགས་སྤྱོད་པ་སྐྱོང་། །"
    },
    {
      "bo": "ཨོ་རྒྱན་ལུང་བསྟན་སྐྱེས་མཆོག་སྤྲུལ་པའི་སྐུ། །"
    },
    {
      "bo": "ཐང་སྟོང་རྒྱལ་པོའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཞི་བ་འཕགས་མཆོག་ཐུགས་རྗེ་ཆེན་པོ་དང་། །"
    },
    {
      "bo": "དྲག་པོ་ཁྲོ་བོའི་རྒྱལ་པོ་རྟ་མགྲིན་རྒྱལ། །"
    },
    {
      "bo": "དབྱེར་མེད་ཟུང་འཇུག་མཆོག་གི་སྤྲུལ་པའི་སྐུ། །"
    },
    {
      "bo": "གྲུབ་པའི་འཁོར་ལོས་བསྒྱུར་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རྒྱལ་བས་ལུང་བསྟན་བརྩོན་འགྲུས་བཟང་པོའི་ཞབས། །"
    },
    {
      "bo": "རྒྱ་བོད་ཡུལ་གྲུ་ཀུན་ཏུ་བརྟུལ་ཞུགས་ཀྱི། །"
    },
    {
      "bo": "སྤྱོད་མཛད་ཐང་སྟོང་རྒྱལ་པོར་སྙན་པར་གྲགས། །"
    },
    {
      "bo": "ཨོ་རྒྱན་གཉིས་པའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྐུ་གསུང་ཐུགས་རྟེན་ཆུ་ལ་ལྕགས་ཟམ་སོགས། །"
    },
    {
      "bo": "རྣམ་པར་དཀར་བའི་དགེ་ཚོགས་དཔག་མེད་ཀྱིས། །"
    },
    {
      "bo": "སྔོན་མེད་ཉི་མ་གསར་པའི་དགེ་མཚན་ཅན། །"
    },
    {
      "bo": "གྲུབ་ཆེན་ཆོས་ཀྱི་རྗེ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཁྱོད་ལ་གུས་པས་གསོལ་བ་བཏབས་པའི་མཐུས། །"
    },
    {
      "bo": "བདག་སོགས་གང་དུ་གནས་པའི་ས་ཕྱོགས་སུ། །"
    },
    {
      "bo": "ནད་གདོན་དབུལ་ཕོངས་འཐབ་རྩོད་ཞི་བ་དང་། །"
    },
    {
      "bo": "ཆོས་དང་བཀྲ་ཤིས་འཕེལ་བར་མཛད་དུ་གསོལ། །"
    }
  ]
}