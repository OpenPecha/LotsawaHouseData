  "title": {
    "bo": "༄༅། །རྒྱལ་བ་ཀློང་ཆེན་པ་ལ་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "མཁྱེན་རབ་འཕགས་པ་འཇམ་དཔལ་དབྱངས་དང་མཉམ། །"
    },
    {
      "bo": "བརྩེ་བའི་ཐུགས་རྗེ་སྤྱན་རས་གཟིགས་དང་མཚུངས། །"
    },
    {
      "bo": "ནུས་པ་གསང་བའི་བདག་པོར་དབྱེར་མེད་ཅིང་། །"
    },
    {
      "bo": "སྙིང་ཐིག་གཏེར་གྱི་བཀའ་བབ་ལས་འབྲེལ་རྩལ། །"
    },
    {
      "bo": "པདྨའི་རྒྱལ་ཚབ་དྲི་མེད་འོད་ཟེར་གྲགས། །"
    },
    {
      "bo": "བི་མ་ལ་ཡི་རྗེས་བཟུང་བསམ་ཡས་པ། །"
    },
    {
      "bo": "ཀློང་ཆེན་རབ་འབྱམས་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    }
  ]
}