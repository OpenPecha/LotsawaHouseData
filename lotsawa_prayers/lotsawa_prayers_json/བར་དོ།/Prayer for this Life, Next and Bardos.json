  "title": {
    "bo": "༄༅། །འདི་ཕྱི་བར་དོ་གསུམ་དུ་སྐྱོབ་པའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ས་མཆོག་དཀྱིལ་འཁོར་མངོན་གྱུར་བཱི་མ་ལ། །"
    },
    {
      "bo": "ཀུན་བཟང་ཆོས་སྐུའི་སྟོན་པ་ཀློང་ཆེན་པ། །"
    },
    {
      "bo": "པདྨ་ལས་འབྲེལ་རྩལ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "འདི་ཕྱི་བར་དོ་གསུམ་ལ་ཐུགས་རྗེས་བཟུང༌། །"
    },
    {
      "bo": "བར་དོ་དང་པོའི་འོད་གསལ་ཤར་བའི་ཚེ། །"
    },
    {
      "bo": "ངོ་ཤེས་རྩལ་རྫོགས་བརྟན་པ་ཐོབ་ནས་ཀྱང༌། །"
    },
    {
      "bo": "ཁྱད་ཆོས་དྲུག་ལྡན་དབྱིངས་སུ་བྱང་ཆུབ་ནས། །"
    },
    {
      "bo": "གཞོན་ནུ་བུམ་སྐུར་བརྟན་པ་ཐོབ་པར་ཤོག །"
    },
    {
      "bo": "རིག་རྩལ་ལོངས་སྐུའི་སྣང་ཆ་ཤར་བའི་ཚེ། །"
    },
    {
      "bo": "མ་པང་བུ་འཇུག་ལྟ་བུའི་གདེང་ཐོབ་ཅིང༌། །"
    },
    {
      "bo": "འོད་དང་རིག་པ་འཇུག་པའི་གནད་མཐོང་ནས། །"
    },
    {
      "bo": "ལོངས་སྤྱོད་རྫོགས་པའི་སྐུ་རུ་སངས་རྒྱས་ཤོག །"
    },
    {
      "bo": "རྣམ་སྨིན་སྲིད་པ་བར་དོ་ཤར་བའི་དུས། །"
    },
    {
      "bo": "མ་སྒོམ་སངས་རྒྱས་ཆོས་ལྔའི་ལམ་བརྟེན་ནས། །"
    },
    {
      "bo": "རྣམ་གྲོལ་དབུགས་ཆེན་འབྱིན་པའི་ཞིང་ཁམས་སུ། །"
    },
    {
      "bo": "སྐྱེ་བ་གཅིག་གིས་སངས་རྒྱས་ཐོབ་པར་ཤོག །"
    }
  ]
}