  "title": {
    "bo": "༄༅། །རྗེ་བཙུན་བཞད་པའི་རྡོ་རྗེའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "དག་པའི་རྩ་ཁམས་ལྷ་ཡི་ཕྱག་རྒྱར་སྨིན། །"
    },
    {
      "bo": "སྲོག་རྩོལ་གཞོམ་བྲལ་རྡོ་རྗེ་ནཱ་དའི་གསུང༌། །"
    },
    {
      "bo": "བདེ་ཆེན་ལྷན་སྐྱེས་དགའ་བཞིས་མྱོས་པའི་ཐུགས། །"
    },
    {
      "bo": "རྗེ་བཙུན་བཞད་པ་རྡོ་རྗེར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྲིད་པར་ཞེན་ལོག་ཆོས་བརྒྱད་འཆིང་ལས་གྲོལ། །"
    },
    {
      "bo": "མོས་གུས་ཚད་བྱིན་བླ་མ་སངས་རྒྱས་མཐོང༌། །"
    },
    {
      "bo": "དབེན་པར་རྩེ་གཅིག་སྒྲུབ་པའི་རྣལ་འབྱོར་གྱིས། །"
    },
    {
      "bo": "སྐུ་བཞིའི་བཙན་ས་ཚེ་འདིར་ཟིན་པར་མཛོད། །"
    },
    {
      "bo": "ནམ་ཞིག་ཚེ་འཕོས་མགོན་ཁྱོད་དགྱེས་པའི་ཞིང༌། །"
    },
    {
      "bo": "རང་སྣང་མངོན་པར་དགའ་བའི་ཚལ་སྐྱེས་ཏེ། །"
    },
    {
      "bo": "འབྲེལ་ཐོག་མཁའ་ཁྱབ་ཡིད་ཅན་རྒྱ་མཚོ་ཀུན། །"
    },
    {
      "bo": "རྣལ་འབྱོར་དབང་ཕྱུག་གོ་འཕང་འགོད་ནུས་ཤོག །"
    }
  ]
}