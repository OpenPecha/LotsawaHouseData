  "title": {
    "bo": "༄༅། །ལྷ་མོ་པརྞ་ཤ་ཝ་རིའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ན་མོ་པི་ཤ་ཙི་ཡེ།"
    },
    {
      "bo": "དུས་གསུམ་སངས་རྒྱས་བསྐྱེད་པའི་ཡུམ། །"
    },
    {
      "bo": "ཡུམ་ཆེན་ཤེས་རབ་ཕར་ཕྱིན་མ། །"
    },
    {
      "bo": "གཟུགས་ཀྱི་སྐུར་སྟོན་འགྲོ་བའི་མགོན། །"
    },
    {
      "bo": "ལོ་མ་གྱོན་མར་ཕྱག་འཚལ་བསྟོད། །"
    },
    {
      "bo": "གྲངས་མེད་གོང་ནས་སངས་རྒྱས་ཀྱང་། །"
    },
    {
      "bo": "ས་བརྒྱད་སེམས་མའི་ཚུལ་སྟོན་ཞིང་། །"
    },
    {
      "bo": "རྒྱལ་བའི་ཕྲིན་ལས་སྒྲུབ་མཛད་མ། །"
    },
    {
      "bo": "གསེར་མདོག་ཅན་མར་ཕྱག་འཚལ་བསྟོད། །"
    },
    {
      "bo": "རྒྱ་གར་རི་ཁྲོད་མདངས་དགའ་བར། །"
    },
    {
      "bo": "ཤིང་ལོ་གསར་པའི་གོས་མནབས་ནས། །"
    },
    {
      "bo": "འཕགས་པ་མི་ཕམ་སྒྲུབ་མཛད་མ། །"
    },
    {
      "bo": "རིག་སྔགས་གྲུབ་མ་ཁྱོད་ཕྱག་འཚལ། །"
    },
    {
      "bo": "གདུག་རྩུབ་ཐམས་ཅད་ཞི་མཛད་ཅིང་། །"
    },
    {
      "bo": "བཀྲ་ཤིས་བདེ་ལེགས་སྦྱིན་མཛད་མ། །"
    },
    {
      "bo": "པརྞ་ཤ་ཝ་རི་ཞེས་པའི། །"
    },
    {
      "bo": "ལྷ་མོ་ཁྱོད་ལ་ཕྱག་འཚལ་བསྟོད། །"
    },
    {
      "bo": "བདག་དང་སློབ་མ་བརྒྱུད་པར་བཅས། །"
    },
    {
      "bo": "ལྷ་མོ་ཁྱོད་ལ་སྐྱབས་གསོལ་གྱིས། །"
    },
    {
      "bo": "ཡམས་ནད་རིམས་ནད་ཕྱུགས་ནད་ལས། །"
    },
    {
      "bo": "རྟག་ཏུ་ཁྱོད་ཀྱིས་བསྲུང་བར་མཛོད། །"
    }
  ]
}