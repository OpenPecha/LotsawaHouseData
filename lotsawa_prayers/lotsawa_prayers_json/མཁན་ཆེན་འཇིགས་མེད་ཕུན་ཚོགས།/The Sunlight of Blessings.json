  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅།། །གསོལ་འདེབས་བྱིན་རླབས་ཉི་འོད།"
  },
  "text": [
    {
      "bo": "དུས་གསུམ་རྒྱལ་བ་ཐམས་ཅད་འདུས་པའི་སྐུ། །"
    },
    {
      "bo": "མ་ལུས་འགྲོ་ཀུན་འདྲེན་པའི་དེད་དཔོན་མཆོག །"
    },
    {
      "bo": "མཁའ་འགྲོ་རྒྱ་མཚོའི་ཚོགས་དཔོན་ཧེ་རུ་ཀ །"
    },
    {
      "bo": "ཡིད་བཞིན་ནོར་བུ་ཁྱེད་ལ་སྙིང་ནས་འདུད། །"
    },
    {
      "bo": "ཁྱོད་ལས་ལྷག་པའི་བླ་མ་བདག་ལ་མེད། །"
    },
    {
      "bo": "ཁྱོད་ཀྱི་གསུང་ལས་ཉམས་ལེན་བཞན་དུ་མེད། །"
    },
    {
      "bo": "དུས་ཀུན་རེ་ལྟོས་གཅིག་པུར་ཁྱོད་བསྟེན་ན། །"
    },
    {
      "bo": "ཡིད་བཞིན་ནོར་ཞེས་འབོད་པ་དོན་ལྡན་མཛོད། །"
    },
    {
      "bo": "བདག་ནི་བློ་དམན་སྦྱངས་པ་ཆུང་བས་ན། །"
    },
    {
      "bo": "སྤོང་ཀློག་རྒྱ་ཆེར་བྱེད་ལ་མཐུ་ཆུང་ཡང་། །"
    },
    {
      "bo": "བླ་མ་མཆོག་དང་འཇམ་དཔལ་གཞོན་ནུ་ཟུང་། །"
    },
    {
      "bo": "དབྱེར་མེད་སྤྱི་བོའི་གཙུག་གམ་སྙིང་དབུས་སུ། །"
    },
    {
      "bo": "བཞུགས་པར་མོས་ནས་གསོལ་བ་འདེབས་ལགས་ན། །"
    },
    {
      "bo": "བྱིན་རླབས་ཐུགས་རྗེའི་བགོ་སྐལ་མི་དམན་པར། །"
    },
    {
      "bo": "དབང་གིས་སྨིན་ཅིང་གདམས་པས་རྒྱུད་གྲོལ་ཏེ། །"
    },
    {
      "bo": "སྣང་བཞི་མཐའ་རུ་འཁྱོལ་བར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "སྐྱེ་བ་ཀུན་ཏུ་ཁྱེད་དང་མི་འབྲལ་ཞིང་། །"
    },
    {
      "bo": "ཏིང་འཛིན་ཡོན་ཏན་རྒྱ་མཚོའི་གཏེར་ལ་དབང་། །"
    },
    {
      "bo": "འཇམ་དཔལ་དབྱངས་བཞིན་ནམ་མཁའ་ཇི་སྲིད་དུ། །"
    },
    {
      "bo": "མ་ལུས་འགྲོ་བའི་དོན་ལ་བརྩོན་གྱུར་ཅིག །"
    }
  ]
}