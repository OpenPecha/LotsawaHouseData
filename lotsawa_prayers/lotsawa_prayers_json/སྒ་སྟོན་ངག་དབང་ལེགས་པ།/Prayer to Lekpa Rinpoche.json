  "title": {
    "bo": "༄༅། །ལེགས་པ་རིན་པོ་ཆེའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "དུས་གསུམ་རྒྱལ་བའི་ཡེ་ཤེས་སྒྱུ་མའི་འཕྲུལ། །"
    },
    {
      "bo": "བདུད་འདུལ་མཐུ་ཆེན་རྡོ་རྗེ་ནག་པོ་ཆེ། །"
    },
    {
      "bo": "དེང་འདིར་བདག་གི་མགོན་གཅིག་ཆོས་ཀྱི་རྗེ། །"
    },
    {
      "bo": "ངག་དབང་ལེགས་པའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རྗེ་བཙུན་བླ་མའི་རྣམ་པར་ཐར་པ་ལ། །"
    },
    {
      "bo": "སྐྱོན་དུ་འཛིན་པའི་རྟོག་པ་མི་སྐྱེས་ཞིང་། །"
    },
    {
      "bo": "ཅི་མཛད་ལེགས་པར་མཐོང་བའི་མོས་གུས་ཀྱིས། །"
    },
    {
      "bo": "བྱིན་རླབས་སེམས་ལ་འཇུག་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "བླ་མ་མཆོག་གསུམ་ལྷ་ཡི་བྱིན་མཐུ་དང་། །"
    },
    {
      "bo": "དམ་ཅན་སྲུང་མ་རྒྱ་མཚོའི་མཐུ་སྟོབས་ཀྱིས། །"
    },
    {
      "bo": "དཔལ་མགོན་བླ་མའི་ཞབས་པད་བརྟན་པ་དང་། །"
    },
    {
      "bo": "འཕྲིན་ལས་དར་ཞིང་རྒྱས་པར་མཛད་དུ་གསོལ། །"
    }
  ]
}