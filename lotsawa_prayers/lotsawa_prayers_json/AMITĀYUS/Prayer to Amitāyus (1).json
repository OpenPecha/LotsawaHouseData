  "title": {
    "bo": "༄༅། །ཚེ་དཔག་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "འཇིག་རྟེན་འདྲེན་པའི་གཙོ་བོ་ཚེ་དཔག་མེད།    །"
    },
    {
      "bo": "དུས་མིན་འཆི་བ་མ་ལུས་འཇོམས་མཛད་པ།    །"
    },
    {
      "bo": "མགོན་མེད་སྡུག་བསྔལ་གྱུར་པ་རྣམས་ཀྱི་སྐྱབས།    །"
    },
    {
      "bo": "སངས་རྒྱས་ཚེ་དཔག་མེད་ལ་ཕྱག་འཚལ་བསྟོད།    །"
    },
    {
      "bo": "ཀུན་ནས་ཀུན་ཏུ་འོད་ཟེར་རབ་འབར་ཞིང་།    །"
    },
    {
      "bo": "ཚེ་དང་ཡེ་ཤེས་དཔག་མེད་སྩོལ་མཛད་པ།    །"
    },
    {
      "bo": "དྲན་པས་དུས་མིན་འཆི་བའི་འཇིགས་པ་འཇོམས།    །"
    },
    {
      "bo": "བཅོམ་ལྡན་ཚེ་དཔག་མེད་ལ་ཕྱག་འཚལ་བསྟོད།    །"
    },
    {
      "bo": "ཁྱོད་སྐུ་པདྨ་རཱ་གའི་ལྷུན་པོ་ལ།    །"
    },
    {
      "bo": "ཉིན་བྱེད་སྟོང་གིས་འཁྱུད་པའི་གཟི་བརྗིད་ཅན།    །"
    },
    {
      "bo": "མཚན་དང་དཔེ་བྱད་མེ་ཏོག་རྣམ་པར་བཀྲ།    །"
    },
    {
      "bo": "སྣང་མཐའ་ཚེ་དཔག་མེད་ལ་ཕྱག་འཚལ་བསྟོད།    །"
    },
    {
      "bo": "གསུང་དབྱངས་ཡན་ལག་དྲུག་ཅུའི་སྒྲ་སྒྲོགས་ཤིང་།    །"
    },
    {
      "bo": "མཐའ་ཡས་ཞིང་ན་གསུང་གཅིག་གིས་ཁྱབ་པ།    །"
    },
    {
      "bo": "ཟད་མི་ཤེས་པའི་གསུང་མཐའ་ཡས་པའི་བདག  །"
    },
    {
      "bo": "གསུང་གི་རྡོ་རྗེ་ཚེ་མཐའ་ཡས་ལ་བསྟོད།    །"
    },
    {
      "bo": "ཏིང་འཛིན་རྒྱ་མཚོར་འཇུག་ཅིང་ལྡང་བ་དང་།    །"
    },
    {
      "bo": "སྟོབས་བཅུའི་དབང་ཕྱུག་སྒྲིབ་པ་ཀུན་ལས་གྲོལ།    །"
    },
    {
      "bo": "ཡེ་ཤེས་རྒྱ་མཚོ་ལྷུན་གྱིས་གྲུབ་པ་ཡི།    །"
    },
    {
      "bo": "མགོན་པོ་འོད་སྣང་ཕ་མཐའ་ཡས་ལ་བསྟོད།    །"
    },
    {
      "bo": "ཞིང་དང་གཞལ་ཡས་བཀོད་པ་མཐའ་ཡས་ཤིང་།    །"
    },
    {
      "bo": "ཕྱོགས་བཅུའི་རྒྱལ་དང་དེ་སྲས་ཚོགས་ཀྱིས་དབུས།    །"
    },
    {
      "bo": "ལྷན་ཅིག་ཐེག་ཆེན་ཆོས་ལ་ལོངས་སྤྱོད་ཅིང་།    །"
    },
    {
      "bo": "རིན་ཆེན་གཟི་བརྗིད་རྒྱལ་པོ་ཁྱོད་ལ་བསྟོད།    །"
    },
    {
      "bo": "ཕྲིན་ལས་འཛད་མེད་ནམ་མཁའི་མཐའ་དང་མཉམ།    །"
    },
    {
      "bo": "གདུལ་བྱ་རྒྱ་མཚོ་སྨིན་ཅིང་གྲོལ་བར་མཛད།    །"
    },
    {
      "bo": "རྣམ་འཕྲུལ་མཐའ་ཡས་བདེ་ལྡན་ཞིང་གི་མགོན།    །"
    },
    {
      "bo": "མཛད་པ་དཔག་མེད་ཚེ་མཐའ་ཡས་ལ་བསྟོད།"
    },
    {
      "bo": "དེ་ལྟར་བསྟོད་པས་དུས་མིན་འཆི་བ་ཞི།    །"
    },
    {
      "bo": "སྒོ་གསུམ་རྡོ་རྗེ་གསུམ་དུ་རབ་གྲུབ་ནས།    །"
    },
    {
      "bo": "ཚེ་སྲོག་མི་ཤིག་རྡོ་རྗེའི་ལྕགས་སྡོང་ཚུགས།    །"
    },
    {
      "bo": "རྡོ་རྗེ་ཚེ་དཔག་མེད་མགོན་འགྲུབ་པར་ཤོག  །"
    }
  ]
}