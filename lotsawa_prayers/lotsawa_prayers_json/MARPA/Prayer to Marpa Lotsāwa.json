  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅། །རྗེ་མར་པ་ལོ་ཙཱ་ལ་གསོལ་བ་འདེབས་པ་མོས་གུས་ཀྱི་རྒྱང་གླུ་ཞེས་བྱ་བ་བཞུགས་སོ། །"
  },
  "text": [
    {
      "bo": "རྗེ་དུས་གསུམ་སངས་རྒྱས་འདུས་པའི་དངོས། །"
    },
    {
      "bo": "དཔལ་དགྱེས་མཛད་རྡོ་རྗེའི་སྤྲུལ་པའི་སྐུ། །"
    },
    {
      "bo": "རྗེ་མར་པ་ལོ་ཙཱར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "བུ་ང་ལ་བྱིན་གྱིས་བརླབ་ཏུ་གསོལ། །"
    },
    {
      "bo": "མགོན་བཀའ་བཞི་བརྒྱུད་པའི་སྤྱི་མེས་ཆེ། །"
    },
    {
      "bo": "ཆོས་སྣང་སེམས་ཀུན་ལ་རང་དབང་བསྒྱུར། །"
    },
    {
      "bo": "དཔལ་གྲུབ་རིགས་རྒྱ་མཚོའི་དེད་དཔོན་ཆེ། །"
    },
    {
      "bo": "མགོན་ལྷོ་བྲག་པ་དེ་སྙིང་དབུས་དྲན། །"
    },
    {
      "bo": "རྗེ་འཕགས་པའི་ཡུལ་དུ་ལན་བདུན་བྱོན། །"
    },
    {
      "bo": "དཔལ་ནཱ་རོ་མི་ཏྲིའི་གདམས་མཛོད་ཀྱིས། །"
    },
    {
      "bo": "ཕ་འགྲོ་བའི་བླ་མའི་ཐུགས་རྒྱུད་ཚིམ། །"
    },
    {
      "bo": "ཆོས་ཟབ་མོ་གསང་སྔགས་ཐེག་པ་ཡི། །"
    },
    {
      "bo": "ནོར་རཏྣའི་གཏེར་ཁ་གྲམ་བུར་བརྡལ། །"
    },
    {
      "bo": "ཕ་ཁྱེད་ལས་འཁྲུངས་པའི་ཐུགས་ཀྱི་སྲས། །"
    },
    {
      "bo": "རྗེ་མི་ལ་ཞེས་པ་མཚན་ཙམ་གྱིས། །"
    },
    {
      "bo": "ངན་སོང་གི་སྡུག་བསྔལ་ཞི་མཛད་ཅིང་། །"
    },
    {
      "bo": "བྷོ་ཏྲ་ཡི་གྲུབ་པ་ཀུན་གྱི་རྒྱན། །"
    },
    {
      "bo": "སྐྱབས་མཐར་ཐུག་ཡིད་བཞིན་ནོར་འདྲའི་སྐུ། །"
    },
    {
      "bo": "གནས་གྲོ་བོ་ལུང་གི་དགོན་པ་དང་། །"
    },
    {
      "bo": "དཔལ་སྲས་མཁར་སྤྲུལ་པའི་ལྷ་ཁང་ན། །"
    },
    {
      "bo": "རྗེ་ཆོས་ཀྱི་དབང་ཕྱུག་ཧེ་རུ་ཀ །"
    },
    {
      "bo": "དཔལ་བདག་མེད་མ་དང་དགྱེས་རོལ་བཞུགས། །"
    },
    {
      "bo": "ཆོས་ངེས་གསང་གི་རྒྱུད་སྡེ་རྒྱ་མཚོ་ཡིས། །"
    },
    {
      "bo": "བུ་སྐལ་བཟང་སློབ་ཚོགས་སྨིན་གྲོལ་མཛད། །"
    },
    {
      "bo": "རྗེ་མི་ཡི་ལུས་ལ་སངས་རྒྱས་ཐུགས། །"
    },
    {
      "bo": "མགོན་སྲས་བཅས་རྒྱལ་བའི་ཕྲིན་ལས་མཛད། །"
    },
    {
      "bo": "དུས་ད་ལྟ་བཞུགས་ན་དགའ་བ་ལ། །"
    },
    {
      "bo": "མགོན་ཁྱོད་ཞལ་མཇལ་བའི་སྐལ་བས་དབེན། །"
    },
    {
      "bo": "བུ་ལས་ངན་སྒྲིབ་པའི་ཉེས་པར་ཟད། །"
    },
    {
      "bo": "ཕ་ཆོས་ཀྱི་དབྱིངས་ན་བཞུགས་བཞིན་དུ། །"
    },
    {
      "bo": "གཟུགས་ལོངས་སྤྲུལ་གྱི་རོལ་པ་རྒྱུན་མི་ཆད། །"
    },
    {
      "bo": "འཁོར་དག་དང་མ་དག་མཐའ་ཀླས་རྣམས། །"
    },
    {
      "bo": "འབྲས་བྱང་ཆུབ་ཆེན་པོའི་ས་ལ་འགོད། །"
    },
    {
      "bo": "རྗེ་ཁྱོད་ཀྱི་ཕྲིན་ལས་མཁའ་ལྟར་ཁྱབ། །"
    },
    {
      "bo": "བོད་མུན་པའི་རྒྱལ་ཁམས་དཀར་པོར་གཏོང་། །"
    },
    {
      "bo": "སྔགས་རིག་འཛིན་གྲུབ་པ་བསམ་ལས་འདས། །"
    },
    {
      "bo": "དཔལ་སྒྲུབ་བརྒྱུད་བསྟན་པས་འཛམ་གླིང་ཁྱབ། །"
    },
    {
      "bo": "མགོན་ཁྱོད་འདྲའི་རྣམ་ཐར་གཞན་ལ་མེད། །"
    },
    {
      "bo": "དཔལ་ས་ར་ཧ་དང་དབྱེར་མེད་པའི། །"
    },
    {
      "bo": "ཕ་ལོ་ཙཱ་ཆེན་པོའི་བཀའ་དྲིན་དྲན། །"
    },
    {
      "bo": "ས་བཅུ་གསུམ་རྩེ་མོར་རབ་ཕྱིན་པའི། །"
    },
    {
      "bo": "དཔལ་ཡན་ལག་བདུན་ལྡན་རྡོ་རྗེ་འཆང་། །"
    },
    {
      "bo": "སྐུ་ཐ་མལ་གྱི་རྣམ་པར་རབ་བསྟན་པ། །"
    },
    {
      "bo": "རྗེ་ལྷོ་བྲག་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྐུ་ཉི་མ་བརྒྱ་པའི་གཟི་བརྗིད་དང་། །"
    },
    {
      "bo": "གསུང་ཆོས་ཀྱི་སྒྲ་དབྱངས་འུ་རུ་རུ། །"
    },
    {
      "bo": "ཐུགས་ཟབ་ཞི་བདེ་སྟོང་འོད་གསལ་ཆེ། །"
    },
    {
      "bo": "ཕ་གསང་གསུམ་གྱི་བྱིན་རླབས་མཚུངས་ཟླ་བྲལ། །"
    },
    {
      "bo": "བདག་མོས་གུས་ཀྱི་གསོལ་བ་འདེབས་ནུས་ན། །"
    },
    {
      "bo": "རྗེས་ཐུགས་ཀྱི་ངེས་པར་མི་གཏོང་སྙམ། །"
    },
    {
      "bo": "བུ་བདག་ལ་བྱིན་རླབས་ཀྱི་ཕ་ཕོག་དེ། །"
    },
    {
      "bo": "དུས་ད་ལྟ་ཉིད་དུ་སྩོལ་རེ་རན། །"
    },
    {
      "bo": "བློ་དྲེད་པོ་ཐར་པའི་ལམ་ལ་བསྒྱུར། །"
    },
    {
      "bo": "སྣང་བདེན་འཛིན་དྲྭ་བ་ཧྲུལ་པོ་བཤིག །"
    },
    {
      "bo": "ཆོས་གཟུང་འཛིན་གྱི་སྤྲོས་པ་དབྱིངས་སུ་ཞི། །"
    },
    {
      "bo": "སེམས་རིག་པ་སྐྱེ་མེད་འོད་གསལ་དེ། །"
    },
    {
      "bo": "དུས་རྒྱུན་ཆད་མེད་པར་རྟག་ཏུ་བསྐྱངས། །"
    },
    {
      "bo": "ང་ཚོགས་དྲུག་གི་སྣང་བ་རང་སར་གྲོལ། །"
    },
    {
      "bo": "རྗེ་ཁྱོད་དང་དགོངས་པ་མཉམ་པར་ཤོག །"
    }
  ]
}