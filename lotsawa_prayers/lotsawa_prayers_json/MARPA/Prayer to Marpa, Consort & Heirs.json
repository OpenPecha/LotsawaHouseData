  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅། །རྗེ་མར་པ་ཡབ་ཡུམ་སྲས་བཅས་ཀྱི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ཨེ་མ་ཧོ།"
    },
    {
      "bo": "ངོ་མཚར་གྲུབ་པ་ཆེན་པོའི་སྐུ་བརྙེས་པ།    །"
    },
    {
      "bo": "སྣང་སེམས་དབང་བསྒྱུར་ཆོས་ཀྱི་རྒྱལ་པོ་མཆོག  །"
    },
    {
      "bo": "སྒྲ་བསྒྱུར་ལོ་ཙཱ་ཆེན་པོ་མར་པ་རྗེ།    །"
    },
    {
      "bo": "བློ་གྲོས་ཆེན་པོ་བློ་མཆོག་མངའ་བའི་བདག  །"
    },
    {
      "bo": "རྒྱུད་སྡེ་རྒྱ་མཚོའི་གསང་བའི་མཛོད་འཛིན་པ།    །"
    },
    {
      "bo": "ཟུང་འཇུག་གྲུབ་པའི་འཁོར་ལོས་སྒྱུར་བ་ཆེ།    །"
    },
    {
      "bo": "གང་གི་གསང་བ་གསུམ་གྱིས་བྱིན་བརླབས་སྲས།    །"
    },
    {
      "bo": "བྱང་ཆུབ་སེམས་དཔའ་དཔའ་ཆེན་འགྲོ་བ་འདུལ།    །"
    },
    {
      "bo": "དར་མ་མདོ་སྡེ་ཚོགས་གཉིས་རྨད་བྱུང་སྐུ།    །"
    },
    {
      "bo": "ཡེ་ཤེས་རྒྱ་མཚོའི་རང་གཟུགས་སྤྱན་རས་གཟིགས།    །"
    },
    {
      "bo": "གཞོན་ནུའི་སྐུར་སྟོན་སྨོན་ལམ་མཐའ་ཡས་བདག  །"
    },
    {
      "bo": "རྡོ་རྗེ་བདག་མེད་མི་མོའི་གཟུགས་བསྒྱུར་བ།    །"
    },
    {
      "bo": "ཤེས་རབ་ལྷ་མོ་བདེ་བའི་བདག་ཉིད་སྐུ།    །"
    },
    {
      "bo": "འཁོར་འདས་ཆོས་ཀུན་དབྱིངས་ཀྱི་བྷ་གར་སྡུད།    །"
    },
    {
      "bo": "དུས་གསུམ་རྒྱལ་བ་སྤྲོ་དང་སྡུད་མཛད་མ།    །"
    },
    {
      "bo": "འཁོར་ལོ་སྡོམ་པའི་གྲུབ་རིག་ཡོངས་ཀྱི་གཙོ།    །"
    },
    {
      "bo": "ལ་ལ་ནཱ་དང་རཱ་སའི་རྒྱུ་བ་ཀུན།    །"
    },
    {
      "bo": "སྒྲ་གཅན་དབྱིངས་སུ་ཟ་བར་བྱེད་པའི་བདག  །"
    },
    {
      "bo": "བཅུ་དྲུག་རྩེར་སོན་མི་སློབ་རྒྱལ་སར་གཤེགས།    །"
    },
    {
      "bo": "མཚན་ཐོས་འཁོར་བའི་འཇིགས་ལས་སྐྱོབ་མཛད་ཅིང་།    །"
    },
    {
      "bo": "བྱིན་རླབས་ཆེན་པོ་མངོན་སུམ་སྟེར་བའི་བདག  །"
    },
    {
      "bo": "རྡོ་རྗེ་རྒྱལ་མཚན་ཐོས་པ་དགའ་ཞེས་གྲགས།    །"
    },
    {
      "bo": "འཇིག་རྟེན་གསུམ་གྱི་རྒྱན་གྱུར་མི་ཡི་མཆོག  །"
    },
    {
      "bo": "དེ་ལྟར་རྗེ་བཙུན་ཡབ་ཡུམ་སྲས་རྣམས་ལ།    །"
    },
    {
      "bo": "གུས་པས་གསོལ་བཏབ་བདག་ལ་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "རང་སེམས་ལྷན་སྐྱེས་ཡེ་ཤེས་ཉི་མ་ཆེས།    །"
    },
    {
      "bo": "སྙིང་གི་མ་རིག་མུན་པ་ཀུན་བསལ་ཞིང་།    །"
    },
    {
      "bo": "སྲིད་གསུམ་དགྲ་སྡེའི་གྲོང་ཁྱེར་གཏན་བཅོམ་ནས།    །"
    },
    {
      "bo": "འོག་མིན་ལྷུན་གྲུབ་གཞལ་མེད་ཉམས་དགའ་བར།    །"
    },
    {
      "bo": "སྐུ་དང་ཡེ་ཤེས་འཛད་མེད་གཏེར་ལ་སྤྱོད།    །"
    },
    {
      "bo": "ཁམས་གསུམ་འཁོར་བ་དོང་ནས་སྤྲུགས་པར་ཤོག  །"
    }
  ]
}