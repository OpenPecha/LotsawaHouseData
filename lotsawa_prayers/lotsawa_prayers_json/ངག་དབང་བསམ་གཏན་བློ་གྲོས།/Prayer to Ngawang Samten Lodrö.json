  "title": {
    "bo": "༄༅། །ངག་དབང་བསམ་གཏན་བློ་གྲོས་ཀྱི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ཨོཾ་སྭསྟི།"
    },
    {
      "bo": "ངག༵་དབ༵ང་འཇམ་དཔལ་ཁྲོས་པའི་རྣལ་འབྱོར་པ།    །"
    },
    {
      "bo": "བས༵མ་གཏན༵་ཏིང་འཛིན་བློ༵་གྲོས༵་ཟབ་མོའི་གཏེར།    །"
    },
    {
      "bo": "བློ་གསལ་རྒྱ་མཚོའི་སྙན༵་བརྒྱུད༵་འཛིན་པའི་ཕུལ།    །"
    },
    {
      "bo": "བསྟན༵་པའི༵་རྒྱལ༵་མཚ༵ན་ཞབས་ལ་གསོལ་བ་འདེབས།    །"
    },
    {
      "bo": "དོན་གཉིས་ལྷུན་གྲུབ་དཔ༵ལ་ལྡན་བཟ༵ང་པོ༵་ཡི།    །"
    },
    {
      "bo": "གསང་གསུམ་བྱིན་བརླབ་རྒྱུད་ལ་ཞུགས་པ་དང་།    །"
    },
    {
      "bo": "ཚད་མ་བཞི་ལྡན་སྙན་བརྒྱུད་ཟབ་མོ་ཡི།    །"
    },
    {
      "bo": "བསྟན་པ་རིན་ཆེན་དར་ཞིང་རྒྱས་པར་ཤོག  །"
    }
  ]
}