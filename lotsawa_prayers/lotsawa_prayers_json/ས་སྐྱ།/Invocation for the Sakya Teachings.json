  "title": {
    "bo": "༄༅། །དབང་རྒྱས་ལྷ་རྣམས་ཐུགས་དམ་བསྐུལ་བ།"
  },
  "text": [
    {
      "bo": "རྩ་བརྒྱུད་བླ་མ་ཡི་དམ་ལྷ་ཚོགས་དང་།  །"
    },
    {
      "bo": "ཁྱད་པར་དབང་མཛད་རྗེ་བཙུན་རིགས་བྱེད་མ།  །"
    },
    {
      "bo": "ཚོགས་ཀྱི་བདག་པོ་འདོད་པའི་རྒྱལ་པོ་དང་།  །"
    },
    {
      "bo": "མྱུར་མཛད་མགོན་དཀར་ཡིད་བཞིན་ནོར་བུ་སོགས།  །"
    },
    {
      "bo": "དབང་རྒྱས་ལྷ་རྣམས་ཐུགས་དམ་རྒྱུད་བསྐུལ་ན།  །"
    },
    {
      "bo": "རྒྱལ་བསྟན་སྤྱི་དང་ཁྱད་པར་ས་སྐྱ་པའི།  །"
    },
    {
      "bo": "བསྟན་པ་རིན་ཆེན་ཕྱོགས་བཅུར་སྤེལ་བའི་སླད།  །"
    },
    {
      "bo": "བཤད་དང་སྒྲུབ་པའི་སྡེ་ཆེན་འཛུགས་པ་ལ།  །"
    },
    {
      "bo": "ཆོས་ལྡན་རྒྱལ་བློན་འབྱོར་ལྡན་ཁྱིམ་བདག་སོགས།  །"
    },
    {
      "bo": "དབང་དུ་བསྡུས་ཤིང་ལོངས་སྤྱོད་ཕོངས་མེད་པ།  །"
    },
    {
      "bo": "ལྷོ་སྤྲིན་བཞིན་དུ་ངང་གིས་འདུ་བར་མཛོད།  །"
    },
    {
      "bo": "སྤང་དང་ཀློག་པའི་བྱ་བ་འཕེལ་རྒྱས་ཤོག  །"
    },
    {
      "bo": "དེ་ལ་བར་གཅོད་རྩོམ་པའི་འབྱུང་པོ་དང་།  །"
    },
    {
      "bo": "ལྷ་མིན་ཀླ་ཀློའི་འཇུག་པ་རབ་ཞི་ནས།  །"
    },
    {
      "bo": "དཀོན་མཆོག་གསུམ་གྱི་དབུ་འཕང་རབ་མཐོ་ཞིང་།  །"
    },
    {
      "bo": "བསྟན་འགྲོར་བདེ་སྐྱིད་འཕེལ་བར་བྱིན་གྱིས་རློབས།  །"
    }
  ]
}