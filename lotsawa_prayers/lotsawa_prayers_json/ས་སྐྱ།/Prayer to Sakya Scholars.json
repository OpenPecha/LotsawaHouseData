  "title": {
    "bo": "༄༅། །དཔལ་ལྡན་ས་སྐྱ་པའི་བསྟན་འཛིན་མཁས་མཆོག་རྣམས་ལ་གསོལ་འདེབས་བཞུགས་སོ། །"
  },
  "text": [
    {
      "bo": "རྒྱལ་བས་ལུང་བསྟན་ཐོབ་པ་ཀུན་དགའ་བཟང་། །"
    },
    {
      "bo": "རྒྱལ་བ་གཉིས་པ་ཀུན་མཁྱེན་ཨེ་ཝཾ་པ། །"
    },
    {
      "bo": "རྒྱལ་སྲས་རྒྱ་མཚོའི་དབུས་ན་མངོན་མཐོ་བ། །"
    },
    {
      "bo": "ངོར་ཆེན་རྡོ་རྗེ་འཆང་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རྗེ་བཙུན་རྡོ་རྗེ་འཆང་ནས་ལེགས་འོངས་བའི། །"
    },
    {
      "bo": "སྙན་བརྒྱུད་བསྟན་པའི་སྲོག་ཤིང་རྫོང་པ་རྗེ། །"
    },
    {
      "bo": "མཐུ་སྟོབས་དབང་ཕྱུག་ཀུན་དགའ་རྣམ་རྒྱལ་ཞེས། །"
    },
    {
      "bo": "རྣལ་འབྱོར་དབང་ཕྱུག་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྡེ་སྣོད་འབུམ་ཕྲག་ཐུགས་སུ་ལེགས་པར་ཆུབ། །"
    },
    {
      "bo": "མ་ཕམ་མགོན་པོའི་དགྱེས་ཞལ་རྟག་ཏུ་གཟིགས། །"
    },
    {
      "bo": "ཐེག་ཆེན་ཟབ་དང་རྒྱ་ཆེའི་དགོངས་དོན་རྟོགས། །"
    },
    {
      "bo": "ཀུན་མཁྱེན་སངས་རྒྱས་དཔལ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "མདོ་སྔགས་རིག་གནས་ཤེས་བྱ་རྒྱ་མཚོ་ནི། །"
    },
    {
      "bo": "རྣམ་དཔྱོད་བརྩོན་པས་ཁྱོད་ཐུགས་བུམ་པར་བསྐྱིལ། །"
    },
    {
      "bo": "འཆད་རྩོད་རྩོམ་ལ་འགྲན་པའི་ཟླ་བྲལ་བ། །"
    },
    {
      "bo": "རོང་སྟོན་སྨྲ་བའི་སེངྒེར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "མ་ཕམ་འཇམ་པའི་དབྱངས་ཀྱི་དགོངས་པའི་མཐིལ། །"
    },
    {
      "bo": "མ་ནོར་ཇི་བཞིན་མངོན་སུམ་གསལ་མཛད་ཅིང་། །"
    },
    {
      "bo": "སྔགས་བརྒྱུད་རྒྱ་མཚོའི་བཤད་སྒྲུབ་ཕྱོགས་བརྒྱར་སྤེལ། །"
    },
    {
      "bo": "ཀུན་མཁྱེན་བསོད་ནམས་སེངྒེར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "གནས་ལྔ་རིག་པ་བྱེ་བའི་ཕུལ་དུ་ཕྱིན། །"
    },
    {
      "bo": "ངེས་དོན་སྙིང་པོའི་ལམ་སྲོལ་རྒྱས་པར་མཛད། །"
    },
    {
      "bo": "པཎ་ཆེན་ཤཱཀྱ་མཆོག་ལྡན་གྲགས་པའི་དཔལ། །"
    },
    {
      "bo": "མཁས་པའི་གཙུག་རྒྱན་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དམ་པ་རྣམས་ལ་གསོལ་བ་བཏབ་པའི་མཐུས། །"
    },
    {
      "bo": "ཚེ་འདིར་བྱང་ཆུབ་སྒྲུབ་པའི་བར་ཆད་ཞི། །"
    },
    {
      "bo": "ཕྱི་མར་འདྲེན་མཆོག་གང་དུ་བཞུགས་པའི་སར། །"
    },
    {
      "bo": "ཕྱིན་ནས་གསུང་གི་བདུད་རྩིར་སྤྱོད་པར་ཤོག །"
    }
  ]
}