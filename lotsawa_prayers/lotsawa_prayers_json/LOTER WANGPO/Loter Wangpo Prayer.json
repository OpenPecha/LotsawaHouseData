  "title": {
    "bo": "༄༅། །རྩ་བའི་བླ་མར་གསོལ་འདེབས་བཞུགས།    །"
  },
  "text": [
    {
      "bo": "ཁྱབ་བདག་གསང་བའི་བདག་པོ་རྡོ་རྗེ་འཆང་།    །"
    },
    {
      "bo": "རབ་འབྱམས་རྒྱུད་སྡེ་རྒྱ་མཚོའི་དཀྱིལ་འཁོར་གཙོ།    །"
    },
    {
      "bo": "དྲན་པས་སྲིད་ཞིའི་འཇིགས་པ་འཕྲོག་མཛད་པ།    །"
    },
    {
      "bo": "འཇམ་དབྱངས་བློ་གཏེར་དབང་པོར་གསོལ་བ་འདེབས།    །"
    },
    {
      "bo": "གང་སྐུ་མཐོང་བས་བདེ་ཆེན་ཡེ་ཤེས་སྐྱེད།    །"
    },
    {
      "bo": "གང་གསུང་ཐོས་པས་མ་རིག་མུན་པ་སེལ།    །"
    },
    {
      "bo": "གང་ཐུགས་དྲན་པས་རང་རིག་ཆོས་སྐུར་སྟོན།    །"
    },
    {
      "bo": "དཔལ་ལྡན་བླ་མའི་ཞབས་ལ་གསོལ་བ་འདེབས།    །"
    },
    {
      "bo": "བླ་མ་ཧེ་རུ་ཀཿདཔལ་རྡོ་རྗེ་འཆང་།    །"
    },
    {
      "bo": "ཁྱོད་ཀྱི་ཐུགས་རྗེས་ཡལ་བར་མི་འདོར་ཤིང་།    །"
    },
    {
      "bo": "སྒོ་གསུམ་འཁྲུལ་པ་རྩད་ནས་ཆོད་པ་དང་།    །"
    },
    {
      "bo": "རྡོ་རྗེ་གསུམ་གྱི་ཡེ་ཤེས་སྨིན་པར་མཛོད།    །"
    }
  ]
}