  "title": {
    "bo": "༄༅། །རྩ་བའི་བླ་མ་ལ་གསོལ་བ་འདེབས་པ་ངག་རྒྱུན་མ་བཞུགས།"
  },
  "text": [
    {
      "bo": "སྐྱབས་གནས་ཀུན་འདུས་གདན་གསུམ་ཚང་བའི་སྐུ།    །"
    },
    {
      "bo": "ཉོན་མོངས་གདུང་སེལ་ཆོས་སྒྲ་སྒྲོགས་པའི་གསུང་།    །"
    },
    {
      "bo": "ཡེ་ཤེས་ལྔ་ལྡན་བདེ་གསལ་མི་རྟོག་ཐུགས།    །"
    },
    {
      "bo": "གསང་བ་འཛིན་པའི་བདག་པོ་རྡོ་རྗེ་འཆང་།    །"
    },
    {
      "bo": "བློ་གཏེར་དབང་པོའི་ཞབས་ལ་གསོལ་བ་འདེབས།    །"
    },
    {
      "bo": "སྒོ་གསུམ་དངོས་པོ་ཀུན་གྱིས་མཆོད་པར་བགྱི།    །"
    },
    {
      "bo": "ཕྱི་ནང་གསང་བའི་བར་ཆད་ཀུན་སེལ་ཞིང་།    །"
    },
    {
      "bo": "དམ་ཚིག་ཉམས་ཆགས་ཉེས་ལྟུང་དྲི་མ་བཤགས།    །"
    },
    {
      "bo": "བསམ་པ་ཐམས་ཅད་ལྷུན་གྱིས་གྲུབ་པ་དང་།    །"
    },
    {
      "bo": "མཆོག་དང་ཐུན་མོངས་དངོས་གྲུབ་སྩལ་དུ་གསོལ།    །"
    },
    {
      "bo": "རང་གཞན་དོན་གཉིས་འགྲུབ་པར་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "བྱང་ཆུབ་བར་དུ་འབྲལ་མེད་ཐུགས་རྗེས་ཟུངས།    །"
    }
  ]
}