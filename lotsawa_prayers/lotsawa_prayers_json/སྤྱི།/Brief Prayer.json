  "title": {
    "bo": "༄༅། །གསོལ་འདེབས་མདོར་བསྡུས།"
  },
  "text": [
    {
      "bo": "རང་རིག་འགྱུར་མེད་ཡེ་ཤེས་བདེ་ཀློང་དུ། །"
    },
    {
      "bo": "རྟག་ཅིང་ཁྱབ་པ་དཔལ་ལྡན་བླ་མའི་སྐུ། །"
    },
    {
      "bo": "གང་ཤར་མ་བཅོས་ངང་ནས་ཞལ་མཇལ་ཏེ། །"
    },
    {
      "bo": "སྐུ་གསུམ་དབྱེར་མེད་རྟོགས་པར་བྱིན་གྱིས་རློབས། །"
    }
  ]
}