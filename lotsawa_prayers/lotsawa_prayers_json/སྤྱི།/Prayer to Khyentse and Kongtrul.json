  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅། །མཁྱེན་ཀོང་གཉིས་དང་རྩ་བའི་བླ་མའི་གསོལ་འདེབས། །"
  },
  "text": [
    {
      "bo": "འཇམ་དབྱངས་བླ་མ་མཁྱེན་བརྩེའི་དབང་པོ་ནི། །"
    },
    {
      "bo": "ངོ་མཚར་བཀའ་བབས་བདུན་གྱི་མངའ་བདག་མཆོག །"
    },
    {
      "bo": "པདྨ་འོད་གསལ་མདོ་སྔགས་གླིང་པ་ལ། །"
    },
    {
      "bo": "མི་ཕྱེད་སྙིང་ནས་གུས་པས་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དེ་ཡི་སྐུ་གསུང་ཐུགས་དང་ཡོན་ཏན་གྱི། །"
    },
    {
      "bo": "ཕྲིན་ལས་ཐམས་ཅད་འབད་མེད་སྒྲུབ་མཛད་པ། །"
    },
    {
      "bo": "ལོ་ཆེན་རྣམ་སྣང་སྤྲུལ་པས་ལུང་ཐོབ་པའི། །"
    },
    {
      "bo": "བློ་གྲོས་རྒྱ་མཚོའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "འཇམ་དཔལ་དབྱངས་ཀྱི་དངོས་གྲུབ་མཆོག་བརྙེས་པ། །"
    },
    {
      "bo": "བཀའ་གཏེར་དམ་པ་ཆོ༵༵ས་ཀྱི༵་མཛོད་འཛིན་ཅིང་། །"
    },
    {
      "bo": "བློ༵་གྲོ༵ས་ཆེན་པོས་གཞན་ལ་སྟོན་མཛད་པ། །"
    },
    {
      "bo": "དྲིན་ཅན་བླ་མའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "འདི་ནས་བཟུང་སྟེ་བྱང་ཆུབ་མ་ཐོབ་བར། །"
    },
    {
      "bo": "ཚེ་རབས་ཕྲེང་བ་ཀུན་ཏུ་རྗེས་འཛིན་ཅིང་། །"
    },
    {
      "bo": "ས་དང་ལམ་གྱི་ཡོན་ཏན་མཐར་ཕྱིན་ནས། །"
    },
    {
      "bo": "བླ་མ་སྐུ་བཞིའི་གོ་འཕང་མྱུར་ཐོབ་ཤོག །"
    }
  ]
}