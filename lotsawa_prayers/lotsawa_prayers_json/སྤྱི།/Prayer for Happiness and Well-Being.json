  "title": {
    "bo": "༄༅། །རྒྱལ་ཁམས་བདེ་ཞིང་སྐྱིད་པའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "བླ་མ་དཀོན་མཆོག་གསུམ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཆར་ཆུ་དུས་སུ་འབབ་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "ལོ་ཕྱུགས་རྟག་ཏུ་ལེགས་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "མི་ནད་ཕྱུགས་ནད་ཞི་བར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "དུས་འཁྲུག་མུ་གེ་མེད་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "དགྲ་ཇག་ཆོམ་རྐུན་ཞི་བར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "སད་སེར་ཐན་པ་མེད་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "རྒྱལ་ཁམས་བདེ་ཞིང་སྐྱིད་པར་བྱིན་གྱིས་རློབས། །"
    }
  ]
}