  "title": {
    "bo": "༄༅། །བླ་མ་ཡང་ཏིག་གི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "བླ་མ་སངས་རྒྱས་རིན་པོ་ཆེ། །"
    },
    {
      "bo": "བདག་ལ་རེ་ས་གཞན་ན་མེད། །"
    },
    {
      "bo": "ཐུགས་རྗེའི་སྤྱན་གྱིས་གཟིགས་མཛོད་ལ། །"
    },
    {
      "bo": "འཁོར་བའི་མཚོ་ལས་བསྒྲལ་དུ་གསོལ། །"
    },
    {
      "bo": "ཚེ་འདིའི་ལེགས་པ་ཀུན་འགྲུབ་ཅིང༌། །"
    },
    {
      "bo": "བགེགས་དང་བར་ཆད་མེད་པ་དང༌། །"
    },
    {
      "bo": "འཆི་ཁར་ཟབ་མོའི་འོད་གསལ་ཟིན། །"
    },
    {
      "bo": "བར་དོའི་འཕྲང་ལས་སྒྲོལ་བར་མཛོད། །"
    },
    {
      "bo": "ལུས་དང་ངག་ཡིད་རྩོམ་པ་ཀུན། །"
    },
    {
      "bo": "རྟག་ཏུ་གཞན་ལ་ཕན་པ་དང༌། །"
    },
    {
      "bo": "རྐྱེན་རྣམས་བྱང་ཆུབ་ལམ་མཆོག་ཏུ། །"
    },
    {
      "bo": "དེ་རིང་ཉིད་ནས་བསྒྱུར་དུ་གསོལ། །"
    },
    {
      "bo": "བདག་གིས་འབད་ཀྱང་ཐར་བར་དཀའ། །"
    },
    {
      "bo": "མགོན་པོ་ཁྱེད་ཀྱི་ཐུགས་རྗེའི་གྲུས། །"
    },
    {
      "bo": "མགོན་མེད་བདག་དང་འགྲོ་བ་ཀུན། །"
    },
    {
      "bo": "ཐར་པའི་གླིང་དུ་ཕྱིན་པར་མཛོད། །"
    },
    {
      "bo": "གང་དག་བདག་ལ་དད་གྱུར་ཏམ། །"
    },
    {
      "bo": "སྨོད་དམ་སྐུར་པ་འདེབས་ཀྱང་རུང༌། །"
    },
    {
      "bo": "དེ་དག་སྡིག་ཟད་ཉོན་མོངས་མེད། །"
    },
    {
      "bo": "སྲིད་པའི་ཆུ་བོ་སྤངས་པར་ཤོག །"
    },
    {
      "bo": "ནམ་ཞིག་བདག་གིས་མིང་ཙམ་གྱིས། །"
    },
    {
      "bo": "འགྲོ་བའི་འདོད་དགུ་རབ་འགྲུབ་ཅིང༌། །"
    },
    {
      "bo": "ཕྱོགས་བཅུ་གང་བའི་ཞིང་རྣམས་སུ། །"
    },
    {
      "bo": "མཆོད་པའི་སྤྲིན་གྱི་ཆར་འབེབས་ཤོག །"
    },
    {
      "bo": "དགེ་བ་འདི་ཡིས་ལུས་ཅན་ཀུན། །"
    },
    {
      "bo": "ཐམས་ཅད་སྲིད་ལས་རྣམ་གྲོལ་ནས། །"
    },
    {
      "bo": "ཡེ་ཤེས་དམ་པ་གཉིས་ཐོབ་སྟེ། །"
    },
    {
      "bo": "དོན་གཉིས་ལྷུན་གྱིས་གྲུབ་པར་མཛོད། །"
    }
  ]
}