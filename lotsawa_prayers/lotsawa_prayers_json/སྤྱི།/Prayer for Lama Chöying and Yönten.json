  "title": {
    "bo": "༄༅། །བླ་མ་ཆོས་དབྱིངས་དང་སྒྲུབ་པ་ཡོན་ཏན་གྱིས་བསྐུལ་བའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "རྗེ་སྐུ་གསུམ་གྱི་བདག་ཉིད་བླ་མ་ལ། །"
    },
    {
      "bo": "ཡིད་གདུང་བ་དྲག་པོས་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཕ་ཁྱེད་ཀྱི་ཐུགས་རྗེས་མ་གཟིགས་ན། །"
    },
    {
      "bo": "མི་བདག་ལ་རེ་ས་གཞན་ན་མེད། །"
    },
    {
      "bo": "ང་ཆོས་སྒོ་ལ་ཞུགས་ནས་ད་ལྟའི་བར། །"
    },
    {
      "bo": "སེམས་མི་འཇིགས་གཏད་སོའི་གདེང་མི་འདུག །"
    },
    {
      "bo": "ད་ལྟ་རང་ཤི་ན་ཅི་ཞིག་བྱ། །"
    },
    {
      "bo": "ཆོས་སྙིང་ནས་བྱེད་པ་ཞིག་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "སྡོམ་གསུམ་ལ་བརྩོན་པ་བྱས་ཁུལ་ཀྱང་། །"
    },
    {
      "bo": "བདག་འཛིན་གཏན་ནས་མ་ཆོད་པས། །"
    },
    {
      "bo": "འཁོར་བ་ལས་ཐར་ཐབས་ཅི་ཞིག་ཡོད། །"
    },
    {
      "bo": "བདག་མེད་རྟོགས་པ་ཞིག་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "སྒྲུབ་ལ་མི་ཚེ་ཕུད་ན་ཡང་། །"
    },
    {
      "bo": "དུག་མཉམ་ཕྱོགས་ཙམ་མ་མཐོང་བས། །"
    },
    {
      "bo": "ཚེ་འདིར་སངས་རྒྱས་ག་ལ་འགྲུབ། །"
    },
    {
      "bo": "བསྐྱེད་རྫོགས་མྱུར་དུ་སྨིན་པ་ཞིག་བྱིན་གྱིས་རློབས། །"
    }
  ]
}