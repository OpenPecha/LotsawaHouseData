  "title": {
    "bo": "༄༅། །བདེ་སྨོན་བསྡུས་པ།"
  },
  "text": [
    {
      "bo": "རྒྱལ་ཀུན་ཐུགས་རྗེའི་རང་གཟུགས་པདྨ་འབྱུང་། །"
    },
    {
      "bo": "ལྔ་བདོའི་འགྲོ་ལ་ལྷག་པར་རྗེས་བརྩེ་བས། །"
    },
    {
      "bo": "ངུར་སྨྲིག་འཛིན་པའི་གར་གྱིས་རྣམ་རོལ་པ། །"
    },
    {
      "bo": "མཉམ་མེད་ཇོ་བོ་རྗེ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "མགོན་ཁྱོད་དགྱེས་པའི་སྤྱན་གྱིས་ལེགས་གཟིགས་ནས། །"
    },
    {
      "bo": "བརྩེ་བའི་ཕྱག་གིས་བདག་སོགས་འགྲོ་ཀུན་གྱི། །"
    },
    {
      "bo": "ལས་ཉོན་སྒྲིབ་པའི་དྲི་མ་ཀུན་བསལ་ནས། །"
    },
    {
      "bo": "བདེ་ཆེན་དག་པའི་ཞིང་དུ་འདྲེན་པར་མཛོད། །"
    }
  ]
}