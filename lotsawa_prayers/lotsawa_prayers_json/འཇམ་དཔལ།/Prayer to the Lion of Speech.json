{
  "source": "lotsawahouse",
  "source_url": "https://www.lotsawahouse.org/bo/tibetan-masters/karma-chakme/prayer-lion-speech",
  "copyright": "https://creativecommons.org/licenses/by-nc/4.0/",
  "title": {
    "bo": "༄༅། །སྨྲ་སེང་གསོལ་འདེབས་བཞུགས།"
  },
  "text": [
    {
      "bo": "ན་མོ་ལོ་ཀི་ཤྭ་ར་ཡེ།"
    },
    {
      "bo": "དུས་གསུམ་སངས་རྒྱས་ཐམས་ཅད་ཀྱི། །"
    },
    {
      "bo": "གསུང་གི་བདག་ཉིད་བཅོམ་ལྡན་འདས། །"
    },
    {
      "bo": "པདྨའི་རིགས་ཀྱི་བདག་པོ་སྟེ། །"
    },
    {
      "bo": "གསུང་གི་རྡོ་རྗེ་ཞེས་ཀྱང་བྱ། །"
    },
    {
      "bo": "འོད་དཔག་མེད་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དེ་དང་ངོ་བོ་དབྱེར་མེད་པའི། །"
    },
    {
      "bo": "སྲས་ཀྱི་ཐུ་བོའི་ཚུལ་བཟུང་བ། །"
    },
    {
      "bo": "བྱང་ཆུབ་སེམས་དཔའ་སེམས་དཔའ་ཆེ། །"
    },
    {
      "bo": "འཇམ་དཔལ་དམར་པོ་རལ་གྲི་འཛིན། །"
    },
    {
      "bo": "སྨྲ་བའི་སེང་གེར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཤེས་རབ་ཡུམ་གྱི་ཚུལ་བཟུང་བ། །"
    },
    {
      "bo": "དུས་གསུམ་སངས་རྒྱས་ཐམས་ཅད་ཀྱི། །"
    },
    {
      "bo": "གསུང་གི་ལྷ་མོ་དབྱངས་ཅན་མ། །"
    },
    {
      "bo": "གང་གའི་ལྷ་མོ་ཞེས་ཀྱང་བྱ། །"
    },
    {
      "bo": "ངག་གི་ལྷ་མོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "གསོལ་བ་བཏབ་པའི་བྱིན་རླབས་ཀྱིས། །"
    },
    {
      "bo": "བདག་དང་བདག་གི་རྗེས་འཇུག་དང་། །"
    },
    {
      "bo": "མཐོང་ཐོས་དྲན་རེག་འགྲོ་བ་ཀུན། །"
    },
    {
      "bo": "མི་ཤེས་མུན་པ་རབ་བསལ་ནས། །"
    },
    {
      "bo": "ཤེས་རབ་རྩ་ཁ་བྱེ་བར་ཤོག །"
    },
    {
      "bo": "སྐྱེ་བ་འདི་ནས་ཚེ་རབས་ཀུན། །"
    },
    {
      "bo": "ཤེས་རབ་འཆལ་བར་མི་འབྱུང་ཞིང་། །"
    },
    {
      "bo": "ཤེས་རབ་ཕུན་སུམ་ཚོགས་པར་ཤོག །"
    },
    {
      "bo": "རྒྱལ་བའི་གསུང་རབ་རྒྱ་མཚོ་ལ། །"
    },
    {
      "bo": "མི་བརྗེད་གཟུངས་ཀྱང་ཐོབ་པར་ཤོག །"
    },
    {
      "bo": "ཆོས་ཉིད་རྣམ་པར་དག་པ་དང་། །"
    },
    {
      "bo": "རྟེན་འབྲེལ་བསླུ་བ་མེད་པ་དང་། །"
    },
    {
      "bo": "འཇམ་དཔལ་ཡབ་ཡུམ་ཐུགས་རྗེ་ཡིས། །"
    },
    {
      "bo": "སྨོན་ལམ་བཏབ་བཞིན་འགྲུབ་པར་ཤོག །"
    }
  ]
}