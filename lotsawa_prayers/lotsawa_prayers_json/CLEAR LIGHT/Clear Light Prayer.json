  "title": {
    "bo": "༄༅། །འོད་གསལ་འཆར་བའི་གསོལ་འདེབས་བཞུགས་སོ།    །"
  },
  "text": [
    {
      "bo": "དྲན་པ་ཙམ་གྱིས་སྲིད་ཞིའི་འཇིགས་འཕྲོག་པ།    །"
    },
    {
      "bo": "དཔལ་ལྡན་བླ་མ་མུན་སེལ་སྒྲོན་མེ་ཉིད།    །"
    },
    {
      "bo": "བདག་གི་སྙིང་ག་པདྨའི་གདན་བཞུགས་ནས།    །"
    },
    {
      "bo": "རང་བྱུང་འོད་གསལ་འཆར་བར་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "ཐོག་མེད་དུས་ནས་མ་རིག་གཏི་མུག་གི །"
    },
    {
      "bo": "མུན་པར་གཉིད་མཐུག་དྲག་པོས་ནོན་པ་བདག  །"
    },
    {
      "bo": "རྗེ་བཙུན་བླ་མའི་དྲིན་གྱིས་ཁྱོད་ཐུགས་དང་།    །"
    },
    {
      "bo": "རང་སེམས་དབྱེར་མེད་ཤེས་པར་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "རང་རིག་གསལ་སྟོང་བླ་མའི་ཐུགས་སུ་ཤར།    །"
    },
    {
      "bo": "ཟབ་ཞི་སྤྲོས་བྲལ་འོད་གསལ་འདུས་མ་བྱས།    །"
    },
    {
      "bo": "སྐྱེ་མེད་ཨ་ཡིག་དཀར་པོ་འོད་འབར་བར།    །"
    },
    {
      "bo": "སེམས་ཟིན་དབྱེར་མེད་བསྲེ་ནུས་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "དེ་ཡི་འོད་ཀྱིས་ཕྱི་ནང་སྣོད་བཅུད་ཀུན།    །"
    },
    {
      "bo": "ཡེ་ཤེས་འོད་ཀྱིས་གསལ་བར་གྱུར་པ་དང་།    །"
    },
    {
      "bo": "གཉིད་མཐུག་ཀུན་གཞིའི་མུན་པ་དབྱིངས་སུ་དག  །"
    },
    {
      "bo": "སྲབ་མཐུག་འོད་གསལ་ཟིན་པར་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "གཟུང་འཛིན་རྟོག་པའི་སྒྲིབ་པས་མ་གོས་པ།    །"
    },
    {
      "bo": "དག་དང་མ་དག་སྣང་བ་ཐམས་ཅད་ཀུན།    །"
    },
    {
      "bo": "སྣང་ཡང་ངར་འཛིན་མེད་པ་གསལ་བའི་ངང་།    །"
    },
    {
      "bo": "གོམས་འདྲིས་བརྟན་པ་ཐོབ་པར་བྱིན་གྱིས་རློབས།    །"
    },
    {
      "bo": "དེ་ལྟར་བརྩོན་པས་ཚེ་འདིར་གྲོལ་བའམ།    །"
    },
    {
      "bo": "བར་དོ་འོད་གསལ་རང་ངོ་ཤེས་པ་དང་།    །"
    },
    {
      "bo": "ཆོས་ཉིད་བདེན་པ་མངོན་སུམ་རྟོགས་པ་རུ།    །"
    },
    {
      "bo": "རང་རིག་དཔལ་ལྡན་བླ་མས་བྱིན་གྱིས་རློབས།    །"
    }
  ]
}