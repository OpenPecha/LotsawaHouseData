  "title": {
    "bo": "༄༅། །སྐྱེ་ཕྲེང་གསོལ་འདེབས་ནི།"
  },
  "text": [
    {
      "bo": "སྔོན་ཚེ་འཕགས་ཡུལ་དགྲ་བཅོམ་ས་གི་ལྷ། །"
    },
    {
      "bo": "པདྨའི་སྤྱན་སྔར་རྡོ་རྗེ་བདུད་འཇོམས་རྗེ། །"
    },
    {
      "bo": "ས་སྐྱ་གོང་དུ་ཀུན་དགའ་རྒྱལ་མཚན་དཔལ། །"
    },
    {
      "bo": "དགེ་ལྡན་གླིང་དུ་དགེ་ལེགས་དཔལ་བཟང་ཞབས། །"
    },
    {
      "bo": "མི་ཉག་ཡུལ་དུ་ཀུན་བཟང་ཆོས་གྲགས་སོགས། །"
    },
    {
      "bo": "མཁས་དང་གྲུབ་བརྙེས་དུ་མའི་ཚུལ་བཟུང་ནས། །"
    },
    {
      "bo": "ཐུབ་བསྟན་རྒྱས་པར་མཛད་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ད་ལྟ་བཤེས་གཉེན་མང་པོས་རྗེས་སུ་བཟུང་། །"
    },
    {
      "bo": "ཐོས་བསམ་སྒོམ་པའི་སྦྱང་བ་གནད་དུ་བསྣུན། །"
    },
    {
      "bo": "མི་ཕམ་རྒྱ་མཚོའི་བྱིན་རླབས་སྙིང་ལ་ཞུགས། །"
    },
    {
      "bo": "བགྲང་ཡས་འགྲོ་དོན་མཛད་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "མ་འོངས་རིགས་ལྡན་དྲག་པོའི་དམག་དཔོན་མཆོག །"
    },
    {
      "bo": "ལས་ཀྱི་རྡོ་རྗེ་ལ་སོགས་སྤྲུལ་པ་ཡིས། །"
    },
    {
      "bo": "ནམ་མཁའ་སྲིད་དུ་འགྲོ་བའི་དོན་མཛད་པའི། །"
    },
    {
      "bo": "སྐྱབས་གཅིག་བླ་མ་རྗེ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རང་དོན་ཐོས་བསམ་སྒོམ་པ་མཐའ་རུ་འཁྱོལ། །"
    },
    {
      "bo": "གཞན་དོན་འཆད་རྩོད་རྩོམ་པའི་ཕྲིན་ལས་རྒྱས། །"
    },
    {
      "bo": "གཉིས་དོན་བཤད་སྒྲུབ་ལས་ཀྱི་སྲོལ་བཏོད་ནས། །"
    },
    {
      "bo": "འདྲེན་མཆོག་ཁྱེད་དང་དབྱེར་མེད་སངས་རྒྱས་ཤོག །"
    }
  ]
}