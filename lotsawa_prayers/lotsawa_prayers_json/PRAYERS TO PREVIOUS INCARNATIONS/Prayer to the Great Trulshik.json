  "title": {
    "bo": "༄༅། །འཁྲུལ་ཞིག་ཆེན་པོའི་འཁྲུངས་རབས་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ཨོཾ་ཨཱཿཧཱུྃ།"
    },
    {
      "bo": "ལྕང་ལོ་ཅན་དུ་མཐུ་སྟོབས་གསང་བའི་བདག །"
    },
    {
      "bo": "སྟོན་པའི་དུས་སུ་ཉེ་གནས་ཀུན་དགའ་བོ། །"
    },
    {
      "bo": "སྲོང་བཙན་དུས་སུ་ཆོས་བློན་སྒར་སྟོང་བཙན། །"
    },
    {
      "bo": "ཨོ་རྒྱན་དུས་སུ་བཻ་རོ་ཙཱ་ན་དང་། །"
    },
    {
      "bo": "སྡིག་རྒྱལ་འདུལ་ཕྱིར་ལྷ་ལུང་དཔལ་རྡོ་རྗེ། །"
    },
    {
      "bo": "མི་ལའི་དུས་སུ་རས་ཆུང་རྡོ་རྗེ་གྲགས། །"
    },
    {
      "bo": "གསང་བདག་བཀའ་བབས་ལས་ཀྱི་རྡོ་རྗེའི་ཞབས། །"
    },
    {
      "bo": "ལྷོ་བྲག་མཁར་ཆུར་མེ་ལོང་རྡོ་རྗེ་དང་། །"
    },
    {
      "bo": "དབེན་གནས་ཞྭ་དེའུར་འཁྲུལ་ཞིག་ཀུན་བསོད་སོགས། །"
    },
    {
      "bo": "གཅིག་བསྡུས་འཁོར་ལོའི་མགོན་པོ་བྱ་བཏངས་པ། །"
    },
    {
      "bo": "ཀུན་བཟང་མཐོང་གྲོལ་རྡོ་རྗེར་གསོལ་བ་འདེབས། །"
    }
  ]
}