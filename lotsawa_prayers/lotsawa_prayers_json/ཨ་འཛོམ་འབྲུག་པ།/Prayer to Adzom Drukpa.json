  "title": {
    "bo": "༄༅། །བཀའ་དྲིན་མཉམ་མེད་རིག་འཛིན་འགྲོ་འདུལ་དཔའ་བོ་རྡོ་རྗེ་ལ་གསོལ་བ་འདེབས་པ་བྱིན་རླབས་བདུད་རྩི་ཞེས་བྱ་བ།"
  },
  "text": [
    {
      "bo": "ཨོཾ་སྭསྟི།"
    },
    {
      "bo": "རྩ་གསུམ་ཀུན་འདུས་ཨོ་རྒྱན་རྡོ་རྗེ་འཆང་། །"
    },
    {
      "bo": "གང་གི་ཡེ་ཤེས་གཅིག་གི་རྣམ་རོལ་ལས། །"
    },
    {
      "bo": "འབངས་རིགས་ཉེར་ལྔའི་ཁྱུ་མཆོག་རྨ་ཐོག་རྗེ། །"
    },
    {
      "bo": "རིན་ཆེན་མཚན་འཆང་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དེ་ཉིད་ལྔ་བདོའི་སྨག་རུམ་གསལ་བའི་སླད། །"
    },
    {
      "bo": "ཟླ་བའི་འོད་ལྟར་གསལ་བའི་ཐུགས་རྗེ་ཅན། །"
    },
    {
      "bo": "མཁྱེན་བརྩེ་ནུས་པའི་ཡོན་ཏན་བསམ་མི་ཁྱབ། །"
    },
    {
      "bo": "འགྲོ་འདུལ་དཔའ་བོ་རྡོ་རྗེར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དགོངས་བརྡའ་སྙན་བརྒྱུད་བླ་མའི་ཚོགས་རྣམས་ཀྱི། །"
    },
    {
      "bo": "ཐུགས་ཀྱི་བཅུད་ཐོབ་ཀུན་བཟང་དགོངས་མཛོད་དབང་། །"
    },
    {
      "bo": "རིག་འཛིན་གྲུབ་པ་ཡོངས་ཀྱི་གཙུག་གི་བརྒྱན། །"
    },
    {
      "bo": "སྣ་ཚོགས་རང་གྲོལ་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྐུ་ཡི་དཀྱིལ་འཁོར་མཐོང་བ་ཙམ་གྱིས་གྲོལ། །"
    },
    {
      "bo": "གསུང་གི་གདངས་སྐད་འབྲུག་གི་སྒྲ་ལྟར་ལྡིར། །"
    },
    {
      "bo": "ཐུགས་ཀྱི་དགོངས་པ་རྒྱ་མཚོ་ལྟར་ཟབ་པ། །"
    },
    {
      "bo": "དཔལ་ལྡན་བླ་མའི་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "འཆད་ན་ཚིག་དོན་འབྲེལ་ལེགས་རྣ་བར་སྙན། །"
    },
    {
      "bo": "རྩོད་པས་ཕས་རྒོལ་བྲག་རི་ཕྱེ་མར་འཐགས། །"
    },
    {
      "bo": "རྩོམ་པ་སྙིང་པོའི་བསྟན་པའི་མཆོད་སྡོང་ཆེ། །"
    },
    {
      "bo": "རྒྱལ་སྲས་སེམས་དཔའ་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རྟག་ཏུ་འོད་གསལ་ངང་ལས་མི་གཡོ་ཞིང་། །"
    },
    {
      "bo": "འཁྲུལ་རྟོག་བག་ཆགས་ཐམས་ཅད་དབྱིངས་སུ་ནུབ། །"
    },
    {
      "bo": "དམིགས་མེད་སྙིང་རྗེ་ཆེན་པོ་འགྲོ་ལ་འཇུག །"
    },
    {
      "bo": "བླ་མ་གདོད་མའི་མགོན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དེང་ནས་བཟུང་སྟེ་བྱང་ཆུབ་སྙིང་པོའི་བར། །"
    },
    {
      "bo": "རིག་འཛིན་བླ་མས་འབྲལ་མེད་རྗེས་སུ་བཟུང་། །"
    },
    {
      "bo": "ཐུགས་བརྒྱུད་དགོངས་པའི་བྱིན་བརླབ་ཐོབ་པ་དང་། །"
    },
    {
      "bo": "རང་གཞན་དོན་གཉིས་འགྲུབ་པར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཕན་བདེའི་འབྱུང་གནས་བསྟན་པ་དར་ཞིང་རྒྱས། །"
    },
    {
      "bo": "བསྟན་འཛིན་སྐྱེས་མཆོག་ཞབས་པད་བརྟན་པ་དང་། །"
    },
    {
      "bo": "དགེ་འདུན་འཕེལ་ཞིང་འཇིག་རྟེན་དགེ་བཅུར་སྤྱོད། །"
    },
    {
      "bo": "སྣོད་བཅུད་རྒུད་ཞི་དགེ་ལེགས་འཕེལ་རྒྱས་ཤོག །"
    }
  ]
}