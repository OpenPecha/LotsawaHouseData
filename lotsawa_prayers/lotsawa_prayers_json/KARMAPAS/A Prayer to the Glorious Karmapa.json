  "title": {
    "bo": "༄༅། །དཔལ་ལྡན་ཀརྨ་པ་ལ་གསོལ་འདེབས། "
  },
  "text": [
    {
      "bo": "དཀོན་མཆོག་རྒྱ་མཚོའི་ཐུགས་རྗེ་འདུས་པའི་སྐུ། །"
    },
    {
      "bo": "རྩ་གསུམ་རྒྱ་མཚོའི་བྱིན་རླབས་རྫོགས་པའི་དཔལ། །"
    },
    {
      "bo": "སྐྱབས་གནས་རྒྱ་མཚོའི་ཕྲིན་ལས་དབང་ཕྱུག་རྗེ། །"
    },
    {
      "bo": "དཔལ་ལྡན་ཀརྨ་པ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཐུགས་རྗེས་གཟིགས་ལ་དགོངས་བརྒྱུད་བྱིན་རླབས་ཕོབ། །"
    },
    {
      "bo": "ལས་ཉོན་བག་ཉལ་སྒྲིབ་ཚོགས་བྱང་བ་དང་། །"
    },
    {
      "bo": "རྟོགས་གྲོལ་དུས་མཉམ་མཆོག་གི་བྱང་ཆུབ་ཆེ། །"
    },
    {
      "bo": "སྟན་ཐོག་འདི་རུ་ཐོབ་པར་མཛད་དུ་གསོལ། །"
    }
  ]
}