  "title": {
    "bo": "༄༅། །མཁའ་འགྲོ་ཚེ་རིང་ཆོས་སྒྲོན་མཆོག་གི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ན་མོ་གུ་ར་ཝེ།"
    },
    {
      "bo": "ཕྱི་ལྟར་ཚངས་པའི་བུ་མོ་དབྱངས་ཅན་མ།  །"
    },
    {
      "bo": "ནང་ལྟར་ཨ་རྱཏ་རེ་མི་མོའི་གཟུགས།  །"
    },
    {
      "bo": "གསང་བ་ལྷན་སྐྱེས་བཛྲ་བཱ་ར་ཧི།  །"
    },
    {
      "bo": "ཀུན་འདུས་ལྭ་དཀར་ཌཱཀི་རྒྱལ་འགྱུར་ཅིག  །"
    },
    {
      "bo": "ཨོ་རྒྱན་དུས་གསུམ་མཁྱེན་པའི་རྡོ་རྗེའི་བཀའ།  །"
    },
    {
      "bo": "གཏེར་འབྱིན་སྒྲུབ་པའི་འཁོར་ལོའི་སྒྱུར་རྣམས་ཀྱིས།  །"
    },
    {
      "bo": "ཤེལ་དཀར་རྡོ་རྗེ་མཚོ་ཡི་རྣམ་སྤྲུལ་དུ།  །"
    },
    {
      "bo": "རྩོད་མེད་ལུང་གིས་སྔགས་ལ་གསོལ་བ་འདེབས།  །"
    },
    {
      "bo": "རྡོ་རྗེ་ལུང་གིས་ཟིན་པ་ཇི་བཞིན་དུ།  །"
    },
    {
      "bo": "ཐབས་མཆོག་པདྨ་ཡེ་ཤེས་རྡོ་རྗེ་ཡི།  །"
    },
    {
      "bo": "ཤེས་རབ་སྟོང་པའི་ཕྱག་རྒྱར་ཉམས་སྦྱོར་བའི།  །"
    },
    {
      "bo": "བདེ་ཆེན་དགའ་བཞིའི་བདག་མོར་གསོལ་བ་འདེབས།  །"
    },
    {
      "bo": "བླ་མ་ཡབ་ཡུམ་དབྱེར་མེད་མོས་གུས་ཀྱིས།  །"
    },
    {
      "bo": "སྙིང་ནས་གསོལ་བ་འདེབས་པའི་གང་ཟག་ལ།  །"
    },
    {
      "bo": "བདེ་སྟོང་ཙཎྜ་ལི་ཡི་རྒྱུད་བསྐུལ་ཏེ།  །"
    },
    {
      "bo": "བདེ་དྲོད་ཡེ་ཤེས་འབར་བར་བྱིན་གྱི་རློབས།  །"
    },
    {
      "bo": "དེ་ལྟར་གསོལ་བ་བཏབ་པའི་བྱིན་རླབས་ཀྱིས།  །"
    },
    {
      "bo": "བློ་སྣ་དམ་པའི་ཆོས་སུ་འགྲོ་བ་དང༌།  །"
    },
    {
      "bo": "ཆོས་ཡང་ལམ་སློང་འཁྲུལ་སྣང་ཡེ་ཤེས་སུ།  །"
    },
    {
      "bo": "དག་ནས་བྱང་ཆུབ་སེམས་མཆོག་སྦྱོང་བར་ཤོག  །"
    },
    {
      "bo": "སྐྱེ་དང་ཚེ་རབས་ཀུན་ཏུ་ཐུགས་རྗེས་ཟུངས།  །"
    },
    {
      "bo": "དུས་དང་རྣམ་པ་ཀུན་ཏུ་བྱིན་གྱིས་རློབས།  །"
    },
    {
      "bo": "འདི་ཕྱི་བར་དོའི་གནས་སྐབས་ཐམས་ཅད་དུ།  །"
    },
    {
      "bo": "རེ་ས་ཁྱེད་ལས་མེད་དོ་རྗེ་བཙུན་མ།  །"
    }
  ]
}