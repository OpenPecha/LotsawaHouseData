  "title": {
    "bo": "༄༅། །གཏེར་ཆེན་མཆོག་གྱུར་བདེ་ཆེན་གླིང་པའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ན་མོ་གུ་རུ་བཛྲ་སཏྭཱ་ཡ།"
    },
    {
      "bo": "ཕྱོགས་བཅུ་དུས་བཞིའི་རྣམ་འདྲེན་སྲས་བཅས་ཀྱི། །"
    },
    {
      "bo": "སྐུ་གསུང་ཐུགས་ཡོན་ཕྲིན་ལས་ངོ་བོ་ཉིད། །"
    },
    {
      "bo": "སྐྱབས་གནས་ཀུན་འདུས་གཏེར་ཆེན་རྡོ་རྗེ་འཆང་། །"
    },
    {
      "bo": "སྙིང་ནས་འབོད་དོ་ཡེ་ཤེས་སྤྱན་གྱིས་གཟིགས། །"
    },
    {
      "bo": "མི་ཕྱེད་གུས་པས་ཕྱག་འཚལ་སྐྱབས་སུ་མཆི། །"
    },
    {
      "bo": "ལུས་དང་ལོངས་སྤྱོད་དགེ་ཚོགས་ལྟོས་མེད་འབུལ། །"
    },
    {
      "bo": "སྡོམ་དང་དམ་ཚིག་ཉམས་པ་མཐོལ་བཤགས་ན། །"
    },
    {
      "bo": "སྒྲིབ་མེད་ཚངས་པ་མཆོག་གི་དངོས་གྲུབ་སྩོལ། །"
    },
    {
      "bo": "བདག་ཅག་བརྒྱུད་འཛིན་སློབ་མར་བཅས་རྣམས་ཀུན། །"
    },
    {
      "bo": "མགོན་པོ་ཁྱོད་ལས་སྐྱབས་གཞན་མ་མཆིས་པས། །"
    },
    {
      "bo": "སྙིང་དབུས་མི་ཤིགས་ཐིག་ལེར་རྟག་བཞུགས་ནས། །"
    },
    {
      "bo": "ཐུགས་ཡིད་གཅིག་ཏུ་འདྲེས་པའི་བྱིན་ཆེན་ཕོབ། །"
    },
    {
      "bo": "གནས་སྐབས་དམ་ཆོས་སྒྲུབ་པའི་འགལ་རྐྱེན་ཞི། །"
    },
    {
      "bo": "མཐུན་རྐྱེན་མ་ལུས་ཕུན་སུམ་ཚོགས་པ་དང་། །"
    },
    {
      "bo": "རྣམ་པར་དཀར་བའི་ལེགས་བྱས་ཇི་སྙེད་ཀྱིས། །"
    },
    {
      "bo": "མགོན་ཁྱོད་ཐུགས་དགོངས་ཡོངས་སུ་རྫོགས་པར་ཤོག །"
    },
    {
      "bo": "མཐར་ཐུག་པདྨས་ཁེབས་པའི་ཞིང་ཁམས་སུ། །"
    },
    {
      "bo": "བྱང་སེམས་ཁྱུ་མཆོག་པདྨའི་མྱུ་གུ་དང་། །"
    },
    {
      "bo": "སྟོན་འཁོར་དགོངས་པ་དབྱེར་མེད་གཅིག་གྱུར་ཏེ། །"
    },
    {
      "bo": "མཁའ་མཉམ་འགྲོ་ཀུན་འདྲེན་པར་བྱིན་གྱིས་རློབས། །"
    },
    {
      "bo": "རྒྱལ་བ་ཀུན་དངོས་བླ་མས་རྗེས་སུ་བཟུང་། །"
    },
    {
      "bo": "རྒྱལ་བའི་སྲས་པོ་ཞབས་པད་བསྐལ་བརྒྱར་བརྟན། །"
    },
    {
      "bo": "རྒྱལ་ཁམས་དྲི་མེད་བཤད་སྒྲུབ་ཕྲིན་ལས་རྒྱས། །"
    },
    {
      "bo": "རྒྱལ་ཁམས་ཀུན་ཏུ་བཀྲ་ཤིས་བདེ་ལེགས་ཤོག །"
    }
  ]
}