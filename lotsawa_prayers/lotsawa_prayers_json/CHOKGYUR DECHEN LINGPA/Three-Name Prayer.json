  "title": {
    "bo": "༄༅། །མཆོག་གླིང་མཚན་གསུམ་ལྡན་གྱི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "པདྨའི་རྒྱལ་ཚབ་ཨོ་རྒྱན་མཆོག་གྱུར་གླིང་། །"
    },
    {
      "bo": "བཀའ་གཏེར་བསྟན་པའི་མངའ་བདག་བདེ་ཆེན་གླིང་། །"
    },
    {
      "bo": "རྫོགས་ཆེན་རང་སྣང་རིས་མེད་ཞིག་པོ་གླིང་། །"
    },
    {
      "bo": "གཏེར་སྟོན་གཅིག་ལ་གླིང་པ་གསུམ་དུ་གྲགས། །"
    },
    {
      "bo": "བཀའ་དྲིན་སུམ་ལྡན་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ངེས་འབྱུང་རྣལ་མར་རྒྱུད་ལ་སྐྱེ་བ་དང་། །"
    },
    {
      "bo": "དཔལ་ལྡན་བླ་མའི་དམ་ཚིག་ལ་གནས་ཤོག །"
    },
    {
      "bo": "བསྐྱེད་དང་རྫོགས་པའི་དྲོད་རྟགས་མྱུར་དུ་སྟོན། །"
    },
    {
      "bo": "རང་རིག་རྫོགས་པ་ཆེན་པོ་མངོན་གྱུར་ནས། །"
    },
    {
      "bo": "ཚེ་གཅིག་སངས་རྒྱས་འགྲུབ་པར་བྱིན་གྱིས་རློབས། །"
    }
  ]
}