  "title": {
    "bo": "༄༅། །རྩ་གསུམ་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "དུས་གསུམ་རྒྱལ་བའི་བཞུགས་གནས་སྐུ་གསུམ་ཞིང་། །"
    },
    {
      "bo": "མཁའ་སྤྱོད་ཉེར་བཞི་དབང་ཕུག་ལ་སོགས་ལ། །"
    },
    {
      "bo": "བཞུགས་པའི་དགོངས་བརྡ་སྙན་བརྒྱུད་རིག་འཛིན་ཚོགས། །"
    },
    {
      "bo": "ཡི་དམ་རྒྱལ་བ་ཞི་ཁྲོ་རབ་འབྱམས་དང་། །"
    },
    {
      "bo": "དཔའ་བོ་མཁའ་འགྲོ་དམ་ཅན་རྒྱ་མཚོ་ལ། །"
    },
    {
      "bo": "གསོལ་བ་འདེབས་སོ་འགལ་རྐྱེན་བར་ཆད་སོལ། །"
    },
    {
      "bo": "བྱང་ཆུབ་ལམ་མཐུན་བསམ་པ་ལྷུན་གྱིས་འགྲུབ། །"
    },
    {
      "bo": "ནམ་ཞིག་སྐུ་གསུམ་རྒྱལ་ས་ཟིན་པར་ཤོག །"
    }
  ]
}