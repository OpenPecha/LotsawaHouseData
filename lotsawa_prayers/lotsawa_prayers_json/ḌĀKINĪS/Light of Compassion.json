  "title": {
    "bo": "༄༅། །ཡེ་ཤེས་མཁའ་འགྲོའི་ཚོགས་ལ་གསོལ་འདེབས་ཐུགས་རྗེའི་འོད་སྣང་ཞེས་བྱ་བཞུགས།"
  },
  "text": [
    {
      "bo": "ཆོས་དབྱིངས་རྡོ་རྗེ་བཙུན་མོའི་ཡེ་ཤེས་དབྱིངས། །"
    },
    {
      "bo": "བདེ་སྟོང་སྒྱུ་འཕྲུལ་དྲྭ་བའི་སྤྲིན་ཕྲེང་ལས། །"
    },
    {
      "bo": "བྱིན་རླབས་དངོས་གྲུབ་ཕྲིན་ལས་གློག་གར་གྱིས། །"
    },
    {
      "bo": "ཕན་བདེའི་ཆར་འབེབས་མཁའ་འགྲོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཐུབ་པའི་སྤྱན་སྔར་གངྒའི་ལྷ་མོའི་ཚུལ། །"
    },
    {
      "bo": "རྒྱལ་ཀུན་གསུང་གི་རྡོ་རྗེ་དབྱངས་ཅན་མ། །"
    },
    {
      "bo": "གུ་རུའི་དགྱེས་སྡེ་གསང་སྔགས་བཀའ་སྡུད་མོ། །"
    },
    {
      "bo": "ཡེ་ཤེས་མཚོ་རྒྱལ་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སངས་རྒྱས་ཀུན་གྱི་ཕྲིན་ལས་མྱུར༵་མ༵འི་ཚུལ། །"
    },
    {
      "bo": "གདུལ་དཀའི་འགྲོ་ཀུན་སྒྲོལ་བ་དཔ༵འ་མོ༵འི་མཚན། །"
    },
    {
      "bo": "སྲིད་ཞིའི་གདུང༵་སྐྱོབ༵་རྒྱལ་བ་ཀུན་ཡུམ་མ། །"
    },
    {
      "bo": "རྗེ་བཙུན་འཕགས་མ་སྒྲོལ༵་མ༵ར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "རྣམ་ཐར་གསུམ་རྫོགས་དབྱིངས་ཡུམ་ཀུན་བཟང་མོ། །"
    },
    {
      "bo": "ཡེ་ཤེས་ཀློང་ལྔ་རིགས་ཀྱི་ཡུམ་ཆེན་ལྔ། །"
    },
    {
      "bo": "གནས་གསུམ་མཁའ་འགྲོའི་རྗེ་མོ་ཁྲོས་མ་ནག །"
    },
    {
      "bo": "དབྱིངས་ཕྱུག་རྡོ་རྗེ་ཕག་མོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "མཆོག་ཏུ་མི་འགྱུར་བདེ་ཆེན་རྡོ་རྗེའི་གཟུགས། །"
    },
    {
      "bo": "གར་གྱི་དབང་ཕྱུག་དགྱེས་མའི་ཡུམ་གྱི་ཚུལ། །"
    },
    {
      "bo": "ཨོ་རྒྱན་ཌཱ་ཀིའི་གཙོ་མོར་དངོས་གྲུབ་བདག །"
    },
    {
      "bo": "གསང་བ་ཡེ་ཤེས་ཞབས་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "དངོས་གཅིག་དུ་མའི་རོལ་པའི་དྷ་ཀི་མ། །"
    },
    {
      "bo": "དོན་དམ་ལྷན་ཅིག་སྐྱེས་མའི་ཡེ་ཤེས་དབྱིངས། །"
    },
    {
      "bo": "འཁོར་འདས་ཀུན་ཁྱབ་མཉམ་ཡངས་བརྡལ་བ་ཆེའི། །"
    },
    {
      "bo": "ངོ་བོར་འདུ་འབྲལ་མེད་པས་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ངེས་འབྱུང་སྐྱོ་ཤས་ལམ་གྱིས་རྒྱུད་སྦྱངས་ནས། །"
    },
    {
      "bo": "དད་མོས་བཙོན་པས་བྱང་ཆུབ་སྤྱོད་པ་རྫོགས། །"
    },
    {
      "bo": "ཁྱད་པར་སྨིན་གྲོལ་ཟབ་མོའི་གསེང་ལམ་གྱིས། །"
    },
    {
      "bo": "ཟུང་འཇུག་བདེ་ཆེན་རྡོ་རྗེའི་གྲོང་རྩེན་ཤོག །"
    },
    {
      "bo": "སྤྱོད་པ་གསུམ་གྱི་ཉེ་རྒྱུ་མཐར་སོན་པས། །"
    },
    {
      "bo": "འབར་བ་གསུམ་གྱི་རླུང་སེམས་དབུ་མར་བཅིང་། །"
    },
    {
      "bo": "འདུ་བ་གསུམ་གྱིས་དོན་གཉིས་ལྷུན་གྲུབ་ནས། །"
    },
    {
      "bo": "གནས་གསུམ་མཁའ་འགྲོའི་ཚོགས་དང་སྐལ་མཉམ་ཤོག །"
    },
    {
      "bo": "ཚེ་བས་ཀུན་ཏུ་ཡེ་ཤེས་མཁའ་འགྲོ་མས། །"
    },
    {
      "bo": "རྗེས་སུ་བཟུང་སྟེ་རྡོ་རྗེ་ཐེག་མཆོག་གྱིས། །"
    },
    {
      "bo": "གསང་མཛོད་འདོད་རྒུར་སྤྱོད་པ་ལྷན་སྐྱེས་ཀྱིས། །"
    },
    {
      "bo": "ཡེ་ཤེས་ཐིག་ལེར་གཉིས་མེད་བྱང་ཆུབ་ཤོག །"
    }
  ]
}