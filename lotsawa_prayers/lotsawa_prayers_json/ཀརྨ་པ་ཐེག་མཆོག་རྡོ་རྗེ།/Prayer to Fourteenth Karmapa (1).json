  "title": {
    "bo": "༄༅། །རྒྱལ་དབང་ཀརྨ་པ་ཐེག་པ་མཆོག་རྡོ་རྗེའི་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "སངས་རྒྱས་ཀུན་འདུས་འགྲོ་མགོན་ཀརྨ་པ། །"
    },
    {
      "bo": "དངོས་གྲུབ་ཆར་འབེབས་ཡི་དམ་ཞི་ཁྲོའི་ཚོགས། །"
    },
    {
      "bo": "ཀུན་འདུས་ཐེག་པ་མཆོག་གི་རྡོ་རྗེ་ལ། །"
    },
    {
      "bo": "གསོལ་བ་འདེབས་སོ་བྱིན་གྱིས་བརླབ་ཏུ་གསོལ། །"
    },
    {
      "bo": "སྡིག་སྒྲིབ་རྐྱེན་ངན་བར་ཆད་ཞི་བ་དང་། །"
    },
    {
      "bo": "མཆོག་དང་ཐུན་མོང་དངོས་གྲུབ་མྱུར་དུ་སྩོལ། །"
    },
    {
      "bo": "ཚེ་འདིར་རང་སེམས་ཆོས་སྐུ་མངོན་གསུམ་རྟོགས། །"
    },
    {
      "bo": "ཕྱི་མ་མཁའ་སྤྱོད་ཞིང་དུ་སྐྱེ་བར་ཤོག །"
    }
  ]
}