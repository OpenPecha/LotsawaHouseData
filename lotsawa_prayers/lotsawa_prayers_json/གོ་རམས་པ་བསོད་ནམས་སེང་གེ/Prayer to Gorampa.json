  "title": {
    "bo": "༄༅། །ཀུན་མཁྱེན་བསྟན་པའི་ཉི་མ་བསོད་ནམས་སེངྒེ་ལ་གསོལ་བ་འདེབས་པ་ཡེ་ཤེས་སྣང་གཏེར་ཞེས་བྱ་བ།"
  },
  "text": [
    {
      "bo": "ན་མོ་གུ་རུ་པུནྱཻ་སེང་ཧ་ཡ།"
    },
    {
      "bo": "ཀུན་མཁྱེན་འཇམ་དཔལ་སྨྲ་བའི་སེངྒེ་མཆོག །"
    },
    {
      "bo": "ཀུན་དགའི་རིང་ལུགས་ཉིན་མོར་བྱེད་པའི་སླད། །"
    },
    {
      "bo": "ཀུན་ཏུ་བཟང་པོའི་སྨོན་ལམ་རབ་གྲུབ་པ། །"
    },
    {
      "bo": "ཀུན་གཟིགས་འཇམ་དབྱངས་བླ་མར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "གདོད་ནས་འཇམ་པའི་དཔལ་དང་དབྱེར་མི་ཕྱེད། །"
    },
    {
      "bo": "འཕགས་བོད་མཁས་གྲུབ་དུ་མའི་སྐྱེ་བ་བཞེས། །"
    },
    {
      "bo": "དེང་འདིར་དགེ་བའི་བཤེས་ཀྱི་སྐུར་སྟོན་ནས། །"
    },
    {
      "bo": "སུམ་ལྡན་རྡོ་རྗེ་འཛིན་པར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ངེས་འབྱུང་ཚུལ་ཁྲིམས་ཁང་བཟང་ཉམས་དགའ་བར། །"
    },
    {
      "bo": "གཞན་ཕན་བྱང་ཆུབ་སེམས་དཔའི་ཐུ་བོ་ཆེ། །"
    },
    {
      "bo": "གསང་བའི་བདག་པོ་རྡོ་རྗེའི་སྙེམས་འཆང་བ། །"
    },
    {
      "bo": "རིགས་གསུམ་འདུས་ཞལ་བླ་མར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཟབ་དང་རྒྱ་ཆེའི་ཤེས་བྱ་ཐམས་ཅད་མཁྱེན། །"
    },
    {
      "bo": "འཆད་རྩོད་རྩོམ་ལ་ཆགས་ཐོགས་སྒྲིབ་པ་བྲལ། །"
    },
    {
      "bo": "གངས་ཅན་མཛེས་པའི་རྒྱན་མཆོག་ཆེན་པོ་ནི། །"
    },
    {
      "bo": "མཚུངས་ཟླ་མེད་པ་ཁྱེད་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ཡུམ་དོན་དགོངས་པ་ཇི་བཞིན་ཐུགས་སུ་ཆུད། །"
    },
    {
      "bo": "དཔལ་ལྡན་ཆོས་ཀྱི་གྲགས་པ་དངོས་སུ་སྣང་། །"
    },
    {
      "bo": "དབྱིག་གི་གཉེན་པོ་བཞིན་དུ་བརྗོད་པ་དག །"
    },
    {
      "bo": "མཁས་པའི་གཙུག་རྒྱན་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "བྱམས་ཀླུ་དགོངས་པ་འགལ་མེད་ཅིག་ཏུ་སྒྲུབ། །"
    },
    {
      "bo": "རྟག་ཆད་སྤྲོས་པའི་མཐའ་ལ་མ་ལྷུང་ཞིང་། །"
    },
    {
      "bo": "ཟུང་འཇུག་དབུ་མ་ཆེན་པོ་སྟོན་མཛད་པ། །"
    },
    {
      "bo": "བྱང་ཕྱོགས་ཐུབ་དབང་གཉིས་པར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "འཇིགས་བྲལ་སྟོབས་ཀྱི་མགོན་པོ་བིརཱུ་པའི། །"
    },
    {
      "bo": "བཞེད་གཞུང་གསུང་ངག་སྨིན་གྲོལ་ཆུ་རྒྱུན་གྱི། །"
    },
    {
      "bo": "སྐལ་ལྡན་སྐུ་བཞིའི་ལོ་ཐོག་རྒྱས་མཛད་པ། །"
    },
    {
      "bo": "རྗེ་བཙུན་རིན་པོ་ཆེ་ལ་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "ངེས་པའི་དོན་དུ་རྡོ་རྗེ་འཆང་དབང་དང་། །"
    },
    {
      "bo": "ཐ་དད་མ་མཆིས་དཀྱིལ་འཁོར་ཀུན་གྱི་བདག །"
    },
    {
      "bo": "གསང་སྔགས་རྒྱུད་དོན་མ་ནོར་གསལ་མཛད་པ། །"
    },
    {
      "bo": "རྣལ་འབྱོར་དབང་ཕྱུག་ཆེན་པོར་གསོལ་བ་འདེབས། །"
    },
    {
      "bo": "སྐྱེ་བ་འདི་དང་སྐྱེ་བ་གཞན་དག་ཏུ། །"
    },
    {
      "bo": "ཁྱེད་ཀྱི་གསང་བ་གསུམ་གྱི་བྱིན་བརླབས་ཞུགས། །"
    },
    {
      "bo": "རྒྱལ་བའི་དགོངས་པ་ཇི་བཞིན་འཆད་པ་ལ། །"
    },
    {
      "bo": "ཀུན་མཁྱེན་བླ་མ་ཉིད་དང་དབྱེར་མེད་ཤོག །"
    },
    {
      "bo": "བསོད་ནམས་ཆེན་པོའི་དཔལ་གྱིས་ལེགས་གསུང་ཚོགས། །"
    },
    {
      "bo": "འཛིན་འཆད་སྤེལ་ལ་བློ་གྲོས་མཐུ་ལྡན་ཞིང་། །"
    },
    {
      "bo": "ཕྱོགས་ལས་རྣམ་པར་རྒྱལ་བའི་སེངྒེའི་སྒྲས། །"
    },
    {
      "bo": "ལྟ་ངན་རི་དྭགས་ཚོགས་རྣམས་འཇོམས་གྱུར་ཅིག །"
    }
  ]
}