  "title": {
    "bo": "༄༅། །རྫོགས་པ་ཆེན་པོ་ཐོད་རྒལ་གསོལ་འདེབས།"
  },
  "text": [
    {
      "bo": "ཨོཾ་ཨཱཿཧཱུྃ།"
    },
    {
      "bo": "ཆོས་སྐུ་ཀུན་བཟང་ཡབ་ཡུམ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "དྲུག་པ་རྡོ་རྗེ་འཆང་ཆེན་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "སྟོན་པ་རྡོ་རྗེ་སེམས་དཔའ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "རིག་འཛིན་དགའ་རབ་རྡོ་རྗེ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "གུ་རུ་ཤྲཱི་སིངྷ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "རྒྱ་གར་རིག་འཛིན་བརྒྱད་པོ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "འཆི་མེད་པདྨ་འབྱུང་གནས་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "ལྷ་ལྕམ་མནྡ་ར་བ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "རྗེ་འབངས་ཉི་ཤུ་རྩ་ལྔ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "གཏེར་སྟོན་བརྒྱ་དང་རྩ་བརྒྱད་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "དྲིན་ཅན་རྩ་བརྒྱུད་བླ་མ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "ཞི་བ་བཞི་བཅུ་རྩ་གཉིས་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "དག་པ་རིག་འཛིན་ཡབ་ཡུམ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "འབར་བ་ཁྲག་འཐུང་ལྔ་བཅུ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "ཆོས་བདག་མཁའ་འགྲོ་སྡེ་ལྔ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "བཀའ་སྲུང་དམ་ཅན་རྒྱ་མཚོ་ལ་གསོལ་བ་འདེབས་སོ། །"
    },
    {
      "bo": "ཆོས་ཉིད་མངོན་སུམ་མཐོང་བར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "ཉམས་སྣང་གོང་དུ་འཕེལ་བར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "རིག་པ་ཚད་ལ་ཕེབས་པར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "ཆོས་ཉིད་ཟད་སར་འཁྱོལ་བར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "འཇའ་ལུས་མཁའ་སྤྱོད་འགྲུབ་པར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "འཕོ་བ་ཆེན་པོ་འབྱོངས་པར་བྱིན་གྱིས་རློབས་ཤིག །"
    },
    {
      "bo": "ཚེ་གཅིག་སངས་རྒྱས་འགྲུབ་པར་བྱིན་གྱིས་རློབས་ཤིག །"
    }
  ]
}